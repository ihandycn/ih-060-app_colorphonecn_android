<manifest package="com.colorphone.lock"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />

    <application android:allowBackup="true" android:supportsRtl="true">

        <activity android:name=".lockscreen.chargingscreen.ChargingGuideActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"/>

        <!-- This service is used to bring main-process's life back. -->
        <service android:name=".lockscreen.LockScreenStarterService"
            android:exported="false">
        </service>

        <service
            android:name=".lockscreen.LockScreenService"
            android:enabled="true"
            android:exported="false">
            <intent-filter android:priority="1000">
                <action android:name="${applicationId}.lockscreen.LockService"/>
            </intent-filter>
        </service>
    </application>

</manifest>
