<manifest package="com.colorphone.lock"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--<uses-permission android:name="android.permission.BLUETOOTH" />-->
    <!--<uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />-->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!--<uses-permission android:name="android.permission.DISABLE_KEYGUARD" />-->
    <!--<uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />-->
    <!--<uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />-->

    <application android:allowBackup="true" android:supportsRtl="true">

        <activity android:name=".lockscreen.chargingscreen.ChargingGuideActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".lockscreen.chargingscreen.ChargingScreenActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:excludeFromRecents="true"
            android:exported="true"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:taskAffinity=".cp_charging_screen"
            android:theme="@style/ChargingScreenTransparentTheme" />

        <activity
            android:name=".lockscreen.locker.LockerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:excludeFromRecents="true"
            android:exported="false"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:taskAffinity=".cp_locker"
            android:theme="@style/ChargingScreenTransparentTheme" />

        <activity
            android:name=".lockscreen.DismissKeyguradActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"
            android:taskAffinity=".cp_locker"
            android:theme="@style/ChargingScreenTransparentTheme" />

        <activity
            android:name=".lockscreen.DismissActivity"
            android:excludeFromRecents="true"
            android:label="@string/app_name"
            android:launchMode="singleInstance" />

        <service
            android:name=".lockscreen.LockScreenService"
            android:enabled="true"
            android:exported="false">
            <intent-filter android:priority="1000">
                <action android:name="${applicationId}.lockscreen.LockService"/>
            </intent-filter>
        </service>
    </application>

</manifest>
