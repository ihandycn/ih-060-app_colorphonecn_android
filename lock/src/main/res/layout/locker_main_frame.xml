<?xml version="1.0" encoding="utf-8"?>
<com.colorphone.lock.lockscreen.locker.LockerMainFrame xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:drawer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/app_custom_icon"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        android:contentDescription="@null"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ic_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="43dp"
        android:paddingBottom="4dp"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingTop="4dp"
        app:srcCompat="@drawable/ic_more_vert_black_24dp" />

    <ImageView
        android:id="@+id/lock_game_view"
        android:layout_width="54.3dp"
        android:layout_height="54.3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="103.8dp"
        android:layout_marginRight="20dp"
        android:clickable="true"
        android:src="@drawable/lock_game_icon_selector"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="104dp"
        android:visibility="gone">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_game_view"
            android:layout_width="58dp"
            android:layout_height="80dp"
            app:lottie_autoPlay="false"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/animation_game_view_hint"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/locker_game_title_bg"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="@string/game_locker_hint"
            android:textColor="#ff9300"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>



    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.colorphone.lock.TypefacedTextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5.2sp"
            android:textColor="@android:color/white"
            android:textSize="60.2sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.09"
            app:typeface="@string/barlow_regular"/>

        <com.colorphone.lock.TypefacedTextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="12.3sp"
            android:textColor="#b3ffffff"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_time" />

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/dim_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="#99000000"
        android:visibility="invisible"/>

    <com.colorphone.lock.lockscreen.locker.SlidingNotificationLayout
        android:id="@+id/lock_sliding_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_ad_container"
        android:layout_marginBottom="6dp"
        >
        <RelativeLayout
            android:id="@+id/lock_notification_window"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginStart="18dp"
            android:paddingBottom="12dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/source_app_avatar"
                android:layout_width="12dp"
                android:layout_height="12dp" />

            <TextView
                android:id="@+id/source_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/source_app_avatar"
                android:layout_toRightOf="@id/source_app_avatar"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:lineSpacingExtra="2sp"
                android:textColor="#cc000000"
                android:text="微信 · 15分钟前"
                android:includeFontPadding="false"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/sender_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/source_app_name"
                android:layout_marginTop="9dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:textColor="#e6000000"
                android:text="淹死的鱼" />

            <ImageView
                android:id="@+id/sender_avatar"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/sender_name" />

            <TextView
                android:id="@+id/notification_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toStartOf="@id/sender_avatar"
                android:layout_toLeftOf="@id/sender_avatar"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@id/sender_name"
                android:layout_marginTop="5dp"
                android:includeFontPadding="false"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="今天打得太棒了，大家都很厉害，今天晚上我们好好庆祝一下"/>

        </RelativeLayout>
    </com.colorphone.lock.lockscreen.locker.SlidingNotificationLayout>

    <com.colorphone.lock.lockscreen.locker.SlidingNotificationLayout
        android:id="@+id/lock_sliding_window_above"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/lock_sliding_window"
        android:layout_marginBottom="6dp"
        >
        <RelativeLayout
            android:id="@+id/lock_notification_window_above"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginStart="18dp"
            android:paddingBottom="12dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/source_app_avatar_above"
                android:layout_width="12dp"
                android:layout_height="12dp" />

            <TextView
                android:id="@+id/source_app_name_above"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/source_app_avatar_above"
                android:layout_toRightOf="@id/source_app_avatar_above"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:lineSpacingExtra="2sp"
                android:textColor="#cc000000"
                android:text="微信 · 15分钟前"
                android:includeFontPadding="false"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/sender_name_above"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/source_app_name_above"
                android:layout_marginTop="9dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:textColor="#e6000000"
                android:text="淹死的鱼" />

            <ImageView
                android:id="@+id/sender_avatar_above"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/sender_name_above" />

            <TextView
                android:id="@+id/notification_content_above"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toStartOf="@id/sender_avatar_above"
                android:layout_toLeftOf="@id/sender_avatar_above"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@id/sender_name_above"
                android:layout_marginTop="5dp"
                android:includeFontPadding="false"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="今天打得太棒了，大家都很厉害，今天晚上我们好好庆祝一下"/>

        </RelativeLayout>
    </com.colorphone.lock.lockscreen.locker.SlidingNotificationLayout>



    <RelativeLayout
        android:id="@+id/rl_ad_container"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="57dp"
        android:visibility="visible">
    </RelativeLayout>

    <com.colorphone.lock.lockscreen.locker.slidingdrawer.SlidingDrawer
        android:id="@+id/operation_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        drawer:allowSingleTap="false"
        drawer:animateOnClick="false"
        drawer:content="@+id/sliding_drawer_content"
        drawer:handle="@+id/blank_handle"
        drawer:sdorientation="bottomUp"
        drawer:tensionTween="#8f2f3132">

        <include
            android:id="@+id/sliding_drawer_content"
            layout="@layout/locker_drawer_content"/>

        <LinearLayout
            android:id="@+id/blank_handle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:orientation="vertical"
            >

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/handle_action_up"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:rotation="180"
                android:scaleType="center"
                android:src="@drawable/actionbar_down"
                android:visibility="gone"/>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/handle_action_down"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:scaleType="center"
                android:src="@drawable/actionbar_down"/>
        </LinearLayout>
    </com.colorphone.lock.lockscreen.locker.slidingdrawer.SlidingDrawer>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/bottom_operation_area"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true">

            <com.colorphone.lock.lockscreen.locker.shimmer.ShimmerTextView
                android:id="@+id/unlock_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:paddingBottom="15.7dp"
                android:lineSpacingExtra="5.8sp"
                android:text="上滑解锁"
                android:textColor="#ffffff"
                android:textSize="12.5sp"/>

            <LinearLayout
                android:id="@+id/wallpaper_container"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/main_phone"/>
            </LinearLayout>

            <com.colorphone.lock.lockscreen.locker.CameraContainer
                android:id="@+id/camera_container"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingBottom="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:paddingLeft="12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/lock_camera" />
            </com.colorphone.lock.lockscreen.locker.CameraContainer>
            <RelativeLayout
                android:id="@+id/toolbar_container"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/lock_toolbar" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</com.colorphone.lock.lockscreen.locker.LockerMainFrame>