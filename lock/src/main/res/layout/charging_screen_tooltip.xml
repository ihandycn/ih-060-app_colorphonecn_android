<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/tooltip_pointer_up"
        android:layout_width="6dp"
        android:layout_height="3dp"/>

    <FrameLayout
        android:id="@+id/tooltip_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tooltip_pointer_up"
        android:background="@drawable/charging_screen_pop_tip_view_shape"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:scrollbars="none">

        <TextView
            android:id="@+id/tooltip_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:typeface="sans"
            android:padding="6dp"/>
        
    </FrameLayout>

    <ImageView
        android:id="@+id/tooltip_pointer_down"
        android:layout_width="6dp"
        android:layout_height="3dp"
        android:layout_below="@id/tooltip_container"
        android:src="@drawable/tooltip_arrow_down"/>

</RelativeLayout>