<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/empty_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_100_transparent"
    android:visibility="gone"
    tools:visibility="visible">

    <FrameLayout
        android:id="@+id/connect_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/button_custom"
        android:gravity="center">

        <com.colorphone.smartlocker.view.RobotoMediumTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="9dp"
            android:text="@string/daily_news_tou_tiao_connect_again"
            android:textColor="@color/white_primary"
            android:textSize="14sp" />

    </FrameLayout>

    <TextView
        android:id="@+id/err_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/connect_again"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:gravity="center"
        android:text="@string/daily_news_tou_tiao_connect_err" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@id/err_text"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/daily_news_no_net" />
</RelativeLayout>