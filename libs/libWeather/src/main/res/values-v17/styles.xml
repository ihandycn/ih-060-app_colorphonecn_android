<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingsGroupTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/settings_group_text_size</item>
        <item name="android:textColor">@color/material_text_black_hint</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">bottom|start</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>


    <style name="SettingsItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">@dimen/settings_item_text_size</item>
    </style>

</resources>