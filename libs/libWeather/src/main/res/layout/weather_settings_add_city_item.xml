<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/material_compat_bg">

    <ImageView
        android:id="@+id/weather_settings_add_city_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:src="@drawable/weather_settings_add"/>

    <com.superapps.view.TypefacedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/weather_settings_add_city_icon"
        android:layout_toRightOf="@+id/weather_settings_add_city_icon"
        android:maxLines="1"
        android:text="@string/weather_settings_item_add_new_city"
        android:textColor="@color/material_text_black_primary"
        android:textSize="@dimen/settings_item_text_size"
        app:typeface="@string/custom_font_regular"/>
</RelativeLayout>
