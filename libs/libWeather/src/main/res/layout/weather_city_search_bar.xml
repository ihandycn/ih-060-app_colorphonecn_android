<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp"
    android:layout_marginRight="15dp">

    <EditText
        android:id="@+id/weather_city_search_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/weather_search_bar_bg"
        android:ellipsize="none"
        android:gravity="start"
        android:hint="@string/weather_search_hint"
        android:paddingBottom="12dp"
        android:paddingEnd="35dp"
        android:paddingLeft="13dp"
        android:paddingRight="35dp"
        android:paddingStart="13dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textColorHint="@color/material_text_black_secondary"
        android:textCursorDrawable="@drawable/black_cursor"
        android:textSize="16sp"
        tools:ignore="UnusedAttribute" />

    <ImageView
        android:id="@+id/weather_city_search_clear_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="5.3dp"
        android:layout_marginRight="5.3dp"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/weather_search_delete"
        android:visibility="invisible" />
</FrameLayout>
