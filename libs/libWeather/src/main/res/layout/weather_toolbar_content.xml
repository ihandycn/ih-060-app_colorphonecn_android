<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:background="#4c6889">

    <com.superapps.view.TypefacedTextView
        android:id="@+id/weather_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="marquee"
        android:textAppearance="@style/ToolbarTextAppearance"
        android:textColor="@color/weather_primary"
        android:textSize="20sp"
        app:typeface="@string/custom_font_regular"
        tools:text="New York" />

    <colorphone.acb.com.libweather.view.PageIndicator
        android:id="@+id/weather_toolbar_page_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:visibility="invisible" />
</LinearLayout>
