<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.acb.libwallpaper">

    <uses-permission
        android:name="android.permission.WRITE_INTERNAL_STORAGE"
        tools:node="remove" />
    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION"
        tools:node="remove" />
    <uses-permission
        android:name="android.permission.ACCESS_COARSE_LOCATION"
        tools:node="remove" />
    <uses-permission
        android:name="android.permission.READ_CONTACTS"
        tools:node="remove" />
    <uses-permission
        android:name="android.permission.WRITE_CONTACTS"
        tools:node="remove" />
    <uses-permission
        android:name="android.permission.GET_ACCOUNTS"
        tools:node="remove" />

    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.SET_WALLPAPER_HINTS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />

    <!-- Permissions required by iHandy Inc. added features -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:node="replace" />

    <!-- Required by libAppFramework -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" />

    <!-- Others -->
    <uses-permission android:name="android.permission.EXPAND_STATUS_BAR" />
    <uses-permission android:name="android.permission.REORDER_TASKS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.BIND_JOB_SERVICE" />

    <!-- OpenGL ES 2.0 required for GPUImage blur library -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application>

        <activity
            android:name=".live.customize.activity.CustomizeActivity"
            android:alwaysRetainTaskState="true"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeAppBarLightStatusBarActivity">
            <intent-filter>
                <action android:name="android.intent.action.SET_WALLPAPER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".live.customize.activity.WallpaperPreviewActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:excludeFromRecents="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".live.customize.activity.Cc0ProtocolActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeAppBarLightStatusBarActivity.White" />
        <activity
            android:name=".live.customize.activity.report.SelectReportReasonActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:taskAffinity=".customize.report"
            android:theme="@style/ThemeAppBarLightStatusBarActivity.White" />
        <activity
            android:name=".live.customize.activity.report.InputEmailActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:taskAffinity=".customize.report"
            android:theme="@style/ThemeAppBarLightStatusBarActivity.White" />
        <activity
            android:name=".live.customize.activity.UploadWallpaperActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeAppBarLightStatusBarActivity.White" />
        <activity
            android:name=".live.customize.activity.WallpaperEditActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".live.share.ShareActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.TransparentWithNoTitle" />
        <activity
            android:name=".live.dialog.CustomAlertActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.TransparentWithNoTitle" />


        <receiver
            android:name=".live.receiver.OurAppInstalledReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".live.view.WebViewActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <!-- Debugging -->
        <activity
            android:name=".live.debug.DebugActivity"
            android:exported="true" />

        <service
            android:name=".live.livewallpaper.WallpaperPreloadService"
            android:enabled="true"
            android:exported="false"
            android:process=":livewallpaper" />
        <service
            android:name="com.themelab.launcher.ThemeWallpaperService"
            android:enabled="true"
            android:icon="@drawable/live_wallpaper_thumbnail"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_WALLPAPER">
            <intent-filter android:priority="1">
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>

            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/wallpaper" />
        </service>
        <service
            android:name=".live.livewallpaper.GLWallpaperService"
            android:enabled="true"
            android:icon="@drawable/live_wallpaper_thumbnail"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_WALLPAPER"
            android:process=":livewallpaper">
            <intent-filter android:priority="1">
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>

            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/wallpaper" />
        </service>
        <service
            android:name=".live.livewallpaper.GLWallpaperService2"
            android:enabled="true"
            android:icon="@drawable/live_wallpaper_thumbnail"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_WALLPAPER"
            android:process=":livewallpaper">
            <intent-filter android:priority="1">
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>

            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/wallpaper" />
        </service>
        <service
            android:name=".live.livewallpaper.GLWallpaperService3"
            android:enabled="true"
            android:icon="@drawable/live_wallpaper_thumbnail"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_WALLPAPER"
            android:process=":livewallpaper">
            <intent-filter android:priority="1">
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>

            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/wallpaper" />
        </service>
        <service
            android:name=".live.livewallpaper.GLWallpaperService4"
            android:enabled="true"
            android:icon="@drawable/live_wallpaper_thumbnail"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_WALLPAPER"
            android:process=":livewallpaper">
            <intent-filter android:priority="1">
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>

            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/wallpaper" />
        </service>

        <provider
            android:name=".live.customize.WallpaperProvider"
            android:authorities="${applicationId}.wallpaper"
            android:exported="false" />

        <meta-data
            android:name="android.nfc.disable_beam_default"
            android:value="true" />

        <activity
            android:name=".live.permission.NormalPermissionGuide"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.TransparentWithNoTitle" />
        <activity
            android:name=".live.permission.FloatWindowPermissionGuide"
            android:allowTaskReparenting="false"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"
            android:taskAffinity="com.float.window.guide"
            android:theme="@style/Theme.TransparentWithNoTitle" />
    </application>
</manifest>