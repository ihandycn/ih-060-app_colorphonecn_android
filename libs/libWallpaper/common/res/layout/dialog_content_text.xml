<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:theme="@style/Theme.CustomOverScroll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.superapps.view.AutoResizeTextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="72dp"
            app:autoSizeMaxTextSize="@dimen/dialog_content_title_size"
            android:textColor="@color/color_dialog_title_text"
            android:alpha="@dimen/dialog_content_title"
            android:textSize="@dimen/dialog_content_title_size"
            android:visibility="gone"
            app:typefaceFileName="@string/dialog_content_title_font"/>

        <com.superapps.view.TypefacedTextView
            android:id="@+id/dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_dialog_content_text"
            android:lineSpacingExtra="@dimen/dialog_text_extra_line_height"
            android:lineSpacingMultiplier="@dimen/dialog_text_line_height_multiple"
            android:layout_marginTop="@dimen/dialog_content_text_margin_top"
            android:visibility="gone"
            android:alpha="@dimen/dialog_content_text"
            android:textSize="@dimen/dialog_content_text_size"
            app:typefaceFileName="@string/dialog_content_text_font"/>

        <com.superapps.view.TypefacedTextView
            android:id="@+id/dialog_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_content_desc_margin_top"
            android:textColor="@color/color_dialog_desc_text"
            android:alpha="@dimen/dialog_content_desc"
            android:textSize="@dimen/dialog_content_desc_size"
            android:lineSpacingExtra="@dimen/dialog_desc_text_extra_line_height"
            android:lineSpacingMultiplier="@dimen/dialog_text_line_height_multiple"
            android:visibility="gone"
            app:typefaceFileName="@string/dialog_content_desc_font"/>
    </LinearLayout>

</ScrollView>

