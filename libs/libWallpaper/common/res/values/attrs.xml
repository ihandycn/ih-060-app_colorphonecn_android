<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Page Indicator specific attributes. -->
    <declare-styleable name="PageIndicator">
        <attr name="windowSize" format="integer" />
    </declare-styleable>

    <declare-styleable name="AdvancedPageIndicator">
        <attr name="minRadius" format="dimension" />
        <attr name="indicatorRadius" format="dimension" />
        <attr name="circleColor" format="color" />
        <attr name="indicatorColor" format="color" />
        <attr name="circleSpacing" format="dimension" />
        <attr name="circleVerticalPadding" format="dimension" />
        <attr name="circleHorizontalPadding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RatioAttr">
        <attr name="base" format="enum">
            <enum name="width" value="0"></enum>
            <enum name="height" value="1"></enum>
        </attr>
        <attr name="ratio" format="float"></attr>
    </declare-styleable>

    <declare-styleable name="AnimAttar">
        <attr name="autoPlay" format="boolean"></attr>
    </declare-styleable>
</resources>
