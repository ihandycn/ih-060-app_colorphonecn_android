<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title" />

    <style name="WallpaperLoadingDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>       <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowBackground">@color/transparent_progress_dialog</item> <!-- 设置dialog的背景 -->
        <item name="android:windowNoTitle">true</item>      <!-- 是否显示title -->
        <item name="android:windowIsTranslucent">true</item>    <!-- 是否半透明 -->
        <item name="android:windowIsFloating">true</item>       <!-- 是否浮现在activity之上 -->
        <item name="android:windowContentOverlay">@null</item>  <!-- 也是个 drawable，定义 content overlay 的背景 -->
        <item name="android:backgroundDimEnabled">false</item>  <!-- 背景是否模糊显示 -->
    </style>

    <style name="NewDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>       <!-- Dialog的windowFrame框为无 -->
        <item name="android:backgroundDimAmount">@dimen/dialog_background_dim_amount</item>
        <item name="android:windowIsFloating">false</item>       <!-- 是否浮现在activity之上 -->
        <item name="android:backgroundDimEnabled">true</item>  <!-- 背景是否模糊显示 -->
    </style>

    <!-- Dialog Style-->

    <style name="BaseSettings.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/material_text_black_primary</item>
    </style>

</resources>
