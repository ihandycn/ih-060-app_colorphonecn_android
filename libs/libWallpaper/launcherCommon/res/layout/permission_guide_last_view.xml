<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/top_panel_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clipChildren="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/permission_guide_last_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/permission_guide_title_margin"
            android:layout_marginStart="@dimen/permission_guide_title_margin"
            android:gravity="start"
            android:layout_centerVertical="true"
            android:text="@string/accessibility_service_label"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <com.honeycomb.colorphone.guide.ToggleView
            android:id="@+id/last_view_toggle_view"
            android:layout_width="28dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/top_panel_rl"
        android:background="@color/divider_gray" />
</RelativeLayout>
