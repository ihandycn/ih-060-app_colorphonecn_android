<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000">

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        launcher:layout_constraintGuide_percent="0.09" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        launcher:layout_constraintGuide_percent="0.91" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/new_dialog_bg"
        android:clipChildren="false"
        android:orientation="vertical"
        launcher:layout_constraintBottom_toBottomOf="parent"
        launcher:layout_constraintEnd_toEndOf="@id/guideline_end"
        launcher:layout_constraintStart_toStartOf="@id/guideline"
        launcher:layout_constraintTop_toTopOf="parent">

        
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.Guideline
                android:id="@+id/left_guideline"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                launcher:layout_constraintGuide_percent="0.17" />

            <android.support.constraint.Guideline
                android:id="@+id/top_guideline"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                launcher:layout_constraintGuide_percent="0.11" />


            <com.superapps.view.RoundImageView
                android:id="@+id/horizontal_top_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/floating_window_permission_guide"
                launcher:radius_leftTop="@dimen/dialog_corner_radius"
                launcher:radius_rightTop="@dimen/dialog_corner_radius" />
            
            <ImageView
                android:id="@+id/app_icon"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@mipmap/ic_launcher"
                launcher:layout_constraintTop_toTopOf="@+id/top_guideline"
                launcher:layout_constraintStart_toStartOf="@id/left_guideline"/>

            <com.superapps.view.TypefacedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="14sp"
                android:textColor="#3C3C3C"
                launcher:typeface="@string/custom_font_semibold"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                launcher:layout_constraintTop_toTopOf="@id/app_icon"
                launcher:layout_constraintBottom_toBottomOf="@id/app_icon"
                launcher:layout_constraintStart_toEndOf="@id/app_icon"/>

        </android.support.constraint.ConstraintLayout>

        <FrameLayout
            android:id="@+id/content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dialog_content_margin_right"
            android:layout_marginLeft="@dimen/dialog_content_margin_left"
            android:layout_marginRight="@dimen/dialog_content_margin_right"
            android:layout_marginStart="@dimen/dialog_content_margin_left"
            android:layout_marginTop="@dimen/dialog_content_margin_top"
            android:clipChildren="false"
            tools:ignore="RelativeOverlap">

            <com.superapps.view.TypefacedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.18"
                android:text="@string/floating_window_permission_guide_dialog_content"
                android:textColor="#3c3c3c"
                android:textSize="16sp"
                launcher:typefaceFileName="Custom-Semibold.otf" />
        </FrameLayout>


        <com.superapps.view.TypefacedTextView
            android:id="@+id/ok_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_btn_height"
            android:layout_marginBottom="@dimen/dialog_btn_margin_bottom"
            android:layout_marginEnd="@dimen/dialog_btn_margin_right"
            android:layout_marginLeft="@dimen/dialog_btn_margin_left"
            android:layout_marginRight="@dimen/dialog_btn_margin_right"
            android:layout_marginStart="@dimen/dialog_btn_margin_left"
            android:layout_marginTop="@dimen/dialog_btn_margin_top"
            android:background="@drawable/new_dialog_btn_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/dialog_btn_padding_left"
            android:paddingRight="@dimen/dialog_btn_padding_right"
            android:text="@string/got_it"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            launcher:typefaceFileName="Custom-Bold.otf" />


    </LinearLayout>

    <ImageView
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/material_close_btn_bg_round"
        android:padding="@dimen/dialog_close_icon_margin_end"
        android:src="@drawable/white_cancel_icon"
        launcher:layout_constraintEnd_toEndOf="@+id/linearLayout"
        launcher:layout_constraintTop_toTopOf="@+id/linearLayout" />


</android.support.constraint.ConstraintLayout>
