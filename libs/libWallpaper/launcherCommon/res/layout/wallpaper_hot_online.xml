<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/hot_online_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/hot_online_1_normal"
            layout="@layout/hot_online_wallpaper_image_normal_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
            android:id="@+id/hot_online_1_live"
            layout="@layout/hot_online_wallpaper_image_live_preview_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/hot_online_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/hot_online_2_normal"
            layout="@layout/hot_online_wallpaper_image_normal_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
            android:id="@+id/hot_online_2_live"
            layout="@layout/hot_online_wallpaper_image_live_preview_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/hot_online_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/hot_online_3_normal"
            layout="@layout/hot_online_wallpaper_image_normal_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
            android:id="@+id/hot_online_3_live"
            layout="@layout/hot_online_wallpaper_image_live_preview_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</RelativeLayout>