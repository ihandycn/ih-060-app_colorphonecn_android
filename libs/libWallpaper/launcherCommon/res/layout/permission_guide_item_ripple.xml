<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.acb.libwallpaper.live.guide.RippleView
        android:id="@+id/ripple_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/permission_guide_icon_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:visibility="gone"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:layout_marginRight="33dp"
            android:layout_marginEnd="33dp"
            android:orientation="vertical">

            <com.superapps.view.AutoResizeTextView
                android:id="@+id/permission_guide_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:text="@string/accessibility_service_label"
                android:textColor="#484848"
                android:textSize="16sp"
                app:typeface="@string/custom_font_bold"/>

            <TextView
                android:id="@+id/permission_guide_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/permission_guide_content_margin"
                android:layout_marginStart="@dimen/permission_guide_content_margin"
                android:layout_marginTop="3dp"
                android:text="@string/battery_off"
                android:textColor="#a1a1a1"
                android:textSize="14sp" />
        </LinearLayout>
    </com.acb.libwallpaper.live.guide.RippleView>

    <com.acb.libwallpaper.live.guide.ToggleView
        android:id="@+id/permission_guide_toggle_view"
        android:layout_width="28dp"
        android:layout_height="14dp"
        android:layout_gravity="center_vertical|right|end"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:visibility="gone" />
</FrameLayout>
