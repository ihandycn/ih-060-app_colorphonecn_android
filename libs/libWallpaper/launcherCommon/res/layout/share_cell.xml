<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/clickable_round_corner_bg"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/share_app_icon"
        android:layout_width="@dimen/paged_pad_view_icon_size"
        android:layout_height="@dimen/paged_pad_view_icon_size"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        tools:ignore="ContentDescription"/>

    <com.superapps.view.TypefacedTextView
        android:id="@+id/share_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/paged_pad_view_icon_drawable_padding"
        android:gravity="center_horizontal"
        android:lines="1"
        android:textColor="@color/paged_pad_view_icon_text_color"
        android:textSize="13sp"
        app:typeface="@string/roboto_regular"/>
</LinearLayout>
