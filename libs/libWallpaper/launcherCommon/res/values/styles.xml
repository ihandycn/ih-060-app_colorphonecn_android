<resources>

    <!-- Dividers -->

    <style name="VerticalDivider">
        <item name="android:background">@color/quantum_panel_divider</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Settings activities -->


    <!-- Notification Cleaner uses-->

    <!-- icon pack -->

    <!-- Tab layout for app bar & overview panel -->

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TabLayoutTextAppearance.Customize" parent="TabLayoutTextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ThemeAppBarActivity" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/app_bar_activities_content_bg</item>
        <item name="colorSwitchThumbNormal">@color/material_color_switch_thumb</item>
        <item name="android:colorForeground">@color/material_color_foreground</item>
        <item name="colorAccent">@color/material_color_accent</item>
    </style>

    <style name="ThemeAppBarLightStatusBarActivity" parent="ThemeAppBarActivity"></style>

    <style name="ThemeAppBarLightStatusBarActivity.White" parent="ThemeAppBarLightStatusBarActivity">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Menu panel tab -->

    <style name="Theme.TransparentWithNoTitle" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="BaseWallpaperTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <!--<item name="android:windowShowWallpaper">true</item>-->
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowShowAnimation">@null</item>
        <item name="android:windowHideAnimation">@null</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:requiresFadingEdge">none</item>
    </style>

    <style name="Theme" parent="@style/BaseWallpaperTheme"/>


    <style name="NotificationToolbarIconText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">5.67dp</item>
        <item name="android:textColor">#FFBEBFBF</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Lucky: top banner image and lights -->

    <style name="WallpaperButton">
        <!--<item name="android:background">@drawable/material_compat_bg</item>-->
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">10dp</item>
    </style>

