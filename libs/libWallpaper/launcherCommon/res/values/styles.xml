    <style name="TransparentDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:background">@color/transparent</item>
    </style>


    <!-- Gif center -->

    <style name="CustomizeReportRadioGroup">
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:checked">false</item>
    </style>

    <style name="CustomizeInputLayoutEmailField" parent="Widget.Design.TextInputLayout">
        <item name="android:hint">@string/customize_input_email_hint</item>
    </style>

    <style name="CustomizeEmailField">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>
    <style name="WideHorizontalDivider">
        <item name="android:background">#f4f4f4</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">6dp</item>
    </style>

    <style name="SettingsItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="SettingsItem.SingleLine">
        <item name="android:lines">1</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SettingsItem.MultiLineTitle">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="SettingsItem.MultiLineDescription">
        <item name="android:singleLine">false</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="DefaultCompatDialog" parent="Theme.AppCompat.Light.Dialog.Alert" />
</resources>
