    <!-- Hide Apps -->

    <!-- Boost+ -->

    <!-- Result Page -->

    <!-- Market AppWall -->

    <!-- Moment -->

    <!-- Charging Screen -->

    <!-- Notification Cleaner -->

    <!-- acb phone theme -->

    <!--app lock-->


    <!--sms assistant-->

    <style name="TransparentDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:background">@color/transparent</item>
    </style>


    <!-- Gif center -->

    <style name="CustomizeReportRadioGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/customize_report_radio_group_margin</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:textColor">#7F000000</item>
        <item name="android:checked">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomizeInputLayoutEmailField" parent="Widget.Design.TextInputLayout">
        <item name="android:hint">@string/customize_input_email_hint</item>
    </style>

    <style name="CustomizeEmailField">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>
    <style name="WideHorizontalDivider">
        <item name="android:background">#f4f4f4</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">6dp</item>
    </style>

    <style name="SettingsItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textSize">@dimen/settings_item_text_size</item>
    </style>

    <style name="SettingsItem.SingleLine">
        <item name="android:textColor">@color/material_text_black_primary</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/settings_item_content_text_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SettingsItem.MultiLineTitle">
        <item name="android:textColor">@color/material_text_black_primary</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="SettingsItem.MultiLineDescription">
        <item name="android:textSize">@dimen/settings_item_detail_text_size</item>
        <item name="android:textColor">@color/material_text_black_hint</item>
        <item name="android:singleLine">false</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="DialogButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">@dimen/dialog_btn_padding</item>
        <item name="android:paddingRight">@dimen/dialog_btn_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DefaultCompatDialog" parent="Theme.AppCompat.Light.Dialog.Alert" />

    <style name="DialogTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="typeface">@string/custom_font_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/material_text_black_primary</item>
    </style>

    <style name="DialogDescText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="typeface">@string/custom_font_regular</item>
        <item name="android:textColor">@color/material_text_black_secondary</item>
    </style>
</resources>
