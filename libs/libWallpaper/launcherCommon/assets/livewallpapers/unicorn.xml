            <image path="unicorn/sakura_8.png" ratio="0.5"/>
            <image path="unicorn/sakura_9.png" ratio="0.5"/>
        </background>

        <touch
            emissionRate="20"
            velocityX="20.0"
            velocityDeviationX="150"
            velocityY="300"
            velocityDeviationY="150"
            targetVelocityX="24.0"
            targetVelocityY="1000.0"
