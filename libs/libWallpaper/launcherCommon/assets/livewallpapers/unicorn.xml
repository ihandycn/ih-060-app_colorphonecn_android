    <shader name="background_static.glsl">
        <image path="unicorn/background.png" />
    </shader>

    <particles>
        <background
            emissionRate="1"
            sourceFromX="0.0"
            sourceFromY="0.0"
            sourceToX="1.0"
            sourceToY="0.0"
            velocityX="50.0"
            velocityDeviationX="70"
            velocityY="150"
            velocityDeviationY="130"
            targetVelocityX="50.0"
            targetVelocityY="150.0"
            initialScale="0.7"
            initialScaleDeviation="0.3">

            <image path="unicorn/sakura_1.png" ratio="0.5"/>
            <image path="unicorn/sakura_2.png" ratio="0.5"/>
            <image path="unicorn/sakura_3.png" ratio="0.5"/>
