<?xml version="1.0" encoding="utf-8"?>
<live-wallpaper>
    <shader name="background_switch_2.glsl">
        <image path="neon/background_1.png" />
        <image path="neon/background_2.png" />
    </shader>

    <particles>
        <background
            emissionRate="10"
            alpha="0.7"
            alphaDeviation="0.3"
            blendMode="770"
            alphaInterpolator="CubicEaseInDimmed"
            sourceFromX="0.5"
            sourceFromY="0.5"
            sourceToX="0.5"
            sourceToY="0.5"
            delay="-100"
            delayDeviation="100"
            minVelocity="150"
            maxSelectIterations="8"
            velocityDeviationX="300.0"
            velocityDeviationY="300.0"
            initialScale="0.5"
            initialScaleDeviation="0.4"
            scaleVelocity="0.15">

            <image path="neon/circle_1.png" ratio="1.0"/>
            <image path="neon/circle_2.png" ratio="1.0"/>
        </background>

        <touch
            emissionRate="35"
            velocityX="20.0"
            velocityDeviationX="150"
            velocityY="300"
            velocityDeviationY="150"
            targetVelocityX="24.0"
            targetVelocityY="1000.0"
            initialRotationDeviation="60"
            initialScale="0.7"
            initialScaleDeviation="0.33">

            <image path="neon/gesture_1.png" ratio="1.0"/>
            <image path="neon/gesture_2.png" ratio="1.0"/>
        </touch>
    </particles>
</live-wallpaper>
