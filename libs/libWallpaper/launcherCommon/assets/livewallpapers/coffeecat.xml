<?xml version="1.0" encoding="utf-8"?>
<live-wallpaper>
    <shader name="background_static.glsl">
        <image path="coffeecat/background.png" />
    </shader>

    <particles>
        <background
            emissionRate="8"
            sourceFromX="0.0"
            sourceFromY="0.0"
            sourceToX="1.0"
            sourceToY="0.0"
            velocityX="60.0"
            velocityDeviationX="180"
            velocityY="120"
            velocityDeviationY="130"
            targetVelocityX="60.0"
            targetVelocityY="150.0"
            initialScale="0.3"
            initialScaleDeviation="0.15">

            <image path="coffeecat/coffee_1.png" ratio="1.0"/>
            <image path="coffeecat/coffee_2.png" ratio="1.0"/>
            <image path="coffeecat/coffee_3.png" ratio="1.0"/>
            <image path="coffeecat/coffee_4.png" ratio="1.0"/>
        </background>

        <touch
            alphaInterpolator="InThenOut"
            blendMode="770"
            alpha="0.8"
            alphaDeviation="0.2"
            emissionRate="35"
            velocityX="20.0"
            velocityDeviationX="150"
            velocityY="300"
            velocityDeviationY="150"
            targetVelocityX="24.0"
            targetVelocityY="1000.0"
            initialRotationDeviation="60"
            initialScale="0.7"
            initialScaleDeviation="0.33">

            <image path="coffeecat/gesture_1.png" ratio="1.0"/>
            <image path="coffeecat/gesture_2.png" ratio="1.0"/>
            <image path="coffeecat/gesture_3.png" ratio="1.0"/>
        </touch>
    </particles>
</live-wallpaper>
