<?xml version="1.0" encoding="utf-8"?>
<live-wallpaper>
    <shader name="background_static.glsl">
        <image path="chicken/background.jpg" />
    </shader>

    <particles>
        <background
            emissionRate="1"
            sourceFromX="0.0"
            sourceFromY="0.0"
            sourceToX="1.0"
            sourceToY="0.0"
            velocityX="50.0"
            velocityDeviationX="70"
            velocityY="150"
            velocityDeviationY="130"
            targetVelocityX="50.0"
            targetVelocityY="150.0"
            initialScale="0.7"
            initialScaleDeviation="0.3">

            <image path="chicken/sakura_1.png" ratio="0.5"/>
            <image path="chicken/sakura_2.png" ratio="0.5"/>
            <image path="chicken/sakura_3.png" ratio="0.5"/>
            <image path="chicken/sakura_4.png" ratio="0.5"/>
            <image path="chicken/sakura_5.png" ratio="0.5"/>
            <image path="chicken/sakura_6.png" ratio="0.5"/>
        </background>

        <touch
            emissionRate="35"
            velocityX="20.0"
            velocityDeviationX="150"
            velocityY="300"
            velocityDeviationY="150"
            targetVelocityX="24.0"
            targetVelocityY="1000.0"
            initialRotationDeviation="60"
            initialScale="1.3"
            initialScaleDeviation="0.5">

            <image path="chicken/gesture_1.png" ratio="1.0"/>
            <image path="chicken/gesture_2.png" ratio="1.0"/>
            <image path="chicken/gesture_3.png" ratio="1.0"/>
        </touch>
    </particles>
</live-wallpaper>
