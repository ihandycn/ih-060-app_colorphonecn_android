<?xml version="1.0" encoding="utf-8"?>
<live-wallpaper>
    <shader name="background_switch_2.glsl">
        <image path="tiger/background_1.png" />
        <image path="tiger/background_2.png" />
    </shader>

    <particles>
        <background
            emissionRate="2"
            sourceFromX="0.0"
            sourceFromY="0.0"
            sourceToX="1.0"
            sourceToY="0.0"
            velocityX="50.0"
            velocityDeviationX="70"
            velocityY="150"
            velocityDeviationY="130"
            targetVelocityX="50.0"
            targetVelocityY="150.0"
            initialRotationDeviation="180"
            rotationalVelocityDeviation="30"
            initialScale="0.7"
            initialScaleDeviation="0.3">

            <image path="tiger/fire_1.png" ratio="0.5"/>
            <image path="tiger/fire_2.png" ratio="1.0"/>
        </background>

        <touch
            alphaInterpolator="InThenOut"
            emissionRate="35"
            velocityX="20.0"
            velocityDeviationX="150"
            velocityY="300"
            velocityDeviationY="150"
            targetVelocityX="24.0"
            targetVelocityY="1000.0"
            initialRotationDeviation="60"
            initialScale="0.5"
            initialScaleDeviation="0.23">

            <image path="tiger/gesture_1.png" ratio="1.0"/>
            <image path="tiger/gesture_2.png" ratio="1.0"/>
            <image path="tiger/gesture_3.png" ratio="1.0"/>
        </touch>
    </particles>
</live-wallpaper>
