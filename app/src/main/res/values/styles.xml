<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppLightStatusBarTheme.Welcome" parent="AppLightStatusBarTheme">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ContactTheme" parent="AppLightStatusBarTheme">
        <item name="colorAccent">@color/colorAccentContact</item>
    </style>

    <style name="AppLightStatusBarTheme" parent="AppTheme"/>

    <style name="AppTranslucent" parent="AppLightStatusBarTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.DarkFullScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="NormalButton">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="DialogButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">@dimen/dialog_button_padding</item>
        <item name="android:paddingRight">@dimen/dialog_button_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TransparentCompatDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DialogTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="typeface">@string/custom_font_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/material_text_black_primary</item>
    </style>

    <style name="DialogDescText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="typeface">@string/custom_font_regular</item>
        <item name="android:textColor">@color/material_text_black_secondary</item>
    </style>

    <style name="NormalText">
        <item name="typeface">@string/proxima_nova_regular</item>
    </style>

    <style name="NormalText.Settings">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="NormalText.SettingsHint">
        <item name="android:textColor">@color/primarySubText</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="LayoutSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@drawable/material_compat_bg</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="ProgressBar" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar</item>
        <item name="android:minHeight">4dip</item>
        <item name="android:maxHeight">4dip</item>
    </style>

    <style name="RatioView">
        <item name="aspectRatioOverride">0.5625</item>
    </style>
    <style name="RatioView.Image">
        <item name="aspectRatioOverride">0.5625</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="RatioView.Theme">
        <item name="aspectRatioOverride">0.6</item>
        <item name="round_left_top_corner_radius">5.3dp</item>
        <item name="round_left_bottom_corner_radius">5.3dp</item>
        <item name="round_right_top_corner_radius">5.3dp</item>
        <item name="round_right_bottom_corner_radius">5.3dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="guide_all_features_image">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="layout_heightPercent">40%</item>
    </style>

    <style name="Theme.TransparentWithNoTitle" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="GdpToggleButton">
        <item name="android:clickable">false</item>
    </style>

    <style name="SwitchCompatTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlActivated">#3ada45</item>
    </style>

    <style name="ToolbarTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title" />

    <style name="ChargingScreenTransparentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>
</resources>
