<?xml version="1.0" encoding="utf-8"?>

<com.honeycomb.colorphone.view.FixRatioPreviewWindow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/theme_text_margin_bottom_half"
    tools:showIn="@layout/card_view_theme_selector"
    style="@style/RatioView.Container">

    <com.honeycomb.colorphone.view.RatioImageView
        android:id="@+id/card_preview_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        style="@style/RatioView.Image"
        tools:src="@drawable/theme_preview_stars"
        />

    <com.acb.call.views.ThemePreviewWindow
        android:id="@+id/card_flash_preview_window"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/place_holder"
        android:src="@drawable/theme_loading_holder"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/lock_action_view"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:gravity="center_horizontal|bottom"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/watch_video_to_unlock_gradient_bg"
        >

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/unlock_button"
            android:layout_width="23dp"
            android:layout_height="19dp"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            app:srcCompat="@drawable/watch_video_to_unlock"
            />

        <com.honeycomb.colorphone.view.TypefacedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toLeftOf="@+id/unlock_button"
            android:layout_toStartOf="@+id/unlock_button"
            android:gravity="center_vertical"
            android:textColor="#c1ffffff"
            android:layout_marginBottom="15dp"
            app:typeface="@string/proxima_nova_semibold"
            android:text="@string/watch_video_to_unlock"
            />

    </RelativeLayout>


    <com.acb.call.views.InCallActionView
        android:id="@+id/card_in_call_action_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="24dp"/>

</com.honeycomb.colorphone.view.FixRatioPreviewWindow>