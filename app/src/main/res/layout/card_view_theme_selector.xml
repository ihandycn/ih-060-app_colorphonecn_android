<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/theme_text_margin_bottom_half"
    android:paddingBottom="@dimen/theme_text_margin_bottom_half"
    android:clipChildren="false">

    <include
        android:id="@+id/card_view"
        layout="@layout/card_layout_preview"
        android:visibility="visible"
        tools:visibility="invisible"/>

    <ImageView
        android:id="@+id/theme_hot_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/card_view"
        android:layout_alignStart="@id/card_view"
        android:layout_alignTop="@id/card_view"
        android:layout_gravity="start|top"
        android:layout_marginLeft="0.9dp"
        android:layout_marginStart="0.9dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/theme_card_badge_hot" />

    <com.honeycomb.colorphone.view.TypefacedTextView
        android:id="@+id/card_title"
        style="@style/NormalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view"
        android:layout_marginLeft="@dimen/theme_card_margin_horizontal"
        android:layout_marginStart="@dimen/theme_card_margin_horizontal"
        android:layout_marginTop="@dimen/theme_text_margin_top"
        android:textColor="@color/textDark"
        android:textSize="18sp"
        app:typeface="@string/proxima_nova_semibold"
        tools:text="Neon" />

    <!--<ImageView-->
        <!--android:id="@+id/like_count_icon"-->
        <!--android:layout_width="14dp"-->
        <!--android:layout_height="14dp"-->
        <!--android:layout_below="@id/card_title"-->
        <!--android:layout_marginLeft="6dp"-->
        <!--android:layout_marginStart="6dp"-->
        <!--android:layout_marginTop="2dp"-->
        <!--android:padding="2dp"-->
        <!--android:src="@drawable/theme_card_like_icon" />-->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/like_count_icon"
        android:layout_width="@dimen/theme_heart_size"
        android:layout_height="@dimen/theme_heart_size"
        android:layout_alignLeft="@id/card_title"
        android:layout_alignStart="@id/card_title"
        android:layout_below="@id/card_title"
        android:paddingTop="@dimen/theme_text_space"
        android:paddingBottom="@dimen/theme_text_space"
        app:lottie_fileName="lottie/like.json"
        app:lottie_loop="false"
        app:lottie_progress="0" />

    <com.honeycomb.colorphone.view.TypefacedTextView
        android:id="@+id/card_like_count_txt"
        style="@style/NormalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/like_count_icon"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:padding="@dimen/theme_text_space"
        android:layout_toEndOf="@id/like_count_icon"
        android:layout_toRightOf="@id/like_count_icon"
        android:textColor="@color/textLightGray"
        android:textSize="12sp"
        tools:text="6622335" />

    <android.support.percent.PercentFrameLayout
        android:id="@+id/card_action_group"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignBottom="@id/like_count_icon"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/card_title"
        android:layout_marginEnd="@dimen/theme_card_margin_horizontal"
        android:layout_marginRight="@dimen/theme_card_margin_horizontal"

        android:clickable="false">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/card_download_start_anim"
            app:layout_widthPercent="98%"
            app:layout_heightPercent="98%"
            android:layout_gravity="center"
            android:visibility="gone"
            app:lottie_fileName="lottie/download.json"
            app:lottie_loop="false" />

        <com.honeycomb.colorphone.view.DownloadProgressBar
            android:id="@+id/card_downloading_progress_bar"
            app:layout_widthPercent="95%"
            app:layout_heightPercent="95%"
            android:layout_gravity="center"
            app:circleBackgroundColor="@color/colorMaskDark"
            app:circleRadius="15dp"
            app:drawingColor="#10a2ff"
            app:lineWidth="1.7dp"
            app:overshootValue="2"
            app:progressBackgroundColor="@color/colorMaskDark"
            app:progressColor="#10a2ff"
            app:progressDuration="2000"
            app:strokeWidth="1.7dp" />

        <com.honeycomb.colorphone.view.TypefacedTextView
            android:id="@+id/card_downloading_progress_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            tools:text="55%"
            android:textColor="#10a2ff"
            android:textSize="11sp"
            android:visibility="gone"
            app:typeface="@string/proxima_nova_regular" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/card_download_finished_anim"
            app:layout_widthPercent="86%"
            app:layout_heightPercent="86%"
            android:layout_gravity="center"
            android:visibility="gone"
            app:lottie_fileName="lottie/theme_selector_card_downloaded_anim.json"
            app:lottie_loop="false" />

        <android.support.percent.PercentFrameLayout
            android:id="@+id/card_theme_selected_layout"
            app:layout_widthPercent="95%"
            app:layout_heightPercent="95%"
            android:layout_gravity="center"
            android:background="@drawable/bg_circle_material_compat">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/card_theme_selected_anim"
                app:layout_widthPercent="93%"
                app:layout_heightPercent="93%"
                android:layout_gravity="center"
                android:visibility="gone"
                app:lottie_fileName="lottie/theme_selector_card_selected_anim.json"
                app:lottie_loop="false" />
        </android.support.percent.PercentFrameLayout>

    </android.support.percent.PercentFrameLayout>

</RelativeLayout>
