<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <com.honeycomb.colorphone.view.FixRatioPreviewWindow
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:clipChildren="false"
        app:aspectRatioOverride="0.6"
        app:cardCornerRadius="6dp"
        app:cardPreventCornerOverlap="false">

        <com.honeycomb.colorphone.view.HorizontalBannerImageView
            android:id="@+id/card_view_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/card_bg_round_dark"
            app:aspectRatioOverride="0.6"
            app:round_left_bottom_corner_radius="@dimen/theme_card_radius"
            app:round_left_top_corner_radius="@dimen/theme_card_radius"
            app:round_right_bottom_corner_radius="@dimen/theme_card_radius"
            app:round_right_top_corner_radius="@dimen/theme_card_radius" />

        <com.acb.call.views.ThemePreviewWindow
            android:id="@+id/flash_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.acb.call.views.InCallActionView
            android:id="@+id/in_call_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/theme_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:layout_marginTop="@dimen/theme_badge_margin"
            android:src="@drawable/theme_card_badge_hot"
            android:translationX="-4dp" />

        <ImageView
            android:id="@+id/theme_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:src="@drawable/theme_card_selected" />
    </com.honeycomb.colorphone.view.FixRatioPreviewWindow>

    <TextView
        android:id="@+id/card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textColor="@color/textDark"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Neon" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_below="@id/card_name"
        android:layout_marginTop="2dp"
        android:src="@drawable/theme_card_thumb" />

    <TextView
        android:id="@+id/theme_download_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView1"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@id/imageView1"
        android:layout_toRightOf="@id/imageView1"
        android:gravity="center"
        android:textColor="@color/textLightGray"
        android:textSize="14sp"
        tools:text="6622335" />

    <FrameLayout
        android:id="@+id/card_action_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/card_name"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp">

        <com.honeycomb.colorphone.view.DownloadProgressBar
            android:id="@+id/progressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:circleBackgroundColor="@color/colorMaskDark"
            app:circleRadius="36dp"
            app:drawingColor="@color/button_blue"
            app:lineWidth="3dp"
            app:overshootValue="1"
            app:progressBackgroundColor="@color/colorMaskDark"
            app:progressColor="@color/button_blue"
            app:progressDuration="2000"
            app:resultDuration="5000"
            app:strokeWidth="2dp" />


        <TextView
            style="@style/TxtButton"
            android:id="@+id/applyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/theme_card_button_bg_selector"
            android:text="@string/open"
            android:textColor="@color/button_blue" />
    </FrameLayout>
</RelativeLayout>
