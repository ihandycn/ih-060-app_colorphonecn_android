<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="UnusedAttribute">

    <net.appcloudbox.ads.base.ContainerView.AcbNativeAdPrimaryView
        android:id="@+id/recent_app_banner"
        android:layout_width="match_parent"
        android:layout_height="180dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp">

        <net.appcloudbox.ads.base.ContainerView.AcbNativeAdIconView
            android:id="@+id/recent_app_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/recent_app_icon"
            android:layout_toLeftOf="@+id/recent_app_ad_choice_icon"
            android:layout_toRightOf="@id/recent_app_icon"
            android:layout_toStartOf="@+id/recent_app_ad_choice_icon"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <com.honeycomb.colorphone.view.TypefacedTextView
                android:id="@+id/recent_app_ad_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Launcher Default"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                app:typeface="@string/roboto_condensed"
                tools:ignore="HardcodedText,SpUsage" />

            <com.honeycomb.colorphone.view.TypefacedTextView
                android:id="@+id/recent_app_ad_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Description of the theme"
                android:textColor="#666666"
                android:textSize="12sp"
                tools:ignore="HardcodedText,SmallSp,SpUsage" />
        </LinearLayout>

        <com.honeycomb.colorphone.view.TypefacedTextView
            android:id="@+id/recent_app_action_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/material_compat_button_bg_blue"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingEnd="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:typeface="@string/roboto_medium"
            tools:text="install now" />

        <FrameLayout
            android:id="@+id/recent_app_ad_choice_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/recent_app_action_btn"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@id/recent_app_action_btn"
            android:layout_toStartOf="@id/recent_app_action_btn"
            tools:background="#e0000000"
            tools:layout_height="10dp"
            tools:layout_width="10dp" />
    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="6dp" />
</LinearLayout>
