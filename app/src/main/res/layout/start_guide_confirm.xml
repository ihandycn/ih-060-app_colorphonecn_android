<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:id="@+id/start_guide_confirm_page"
    android:gravity="center_horizontal"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.13" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.87" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_image_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".27"/>

    <View
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_gravity="center"
        android:background="@drawable/start_guide_circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_image_center"
        app:layout_constraintBottom_toBottomOf="@id/guideline_image_center" />

    <ImageView
        android:id="@+id/start_guide_confirm_circle_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:src="@drawable/start_guide_confirm_image_blue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_image_center"
        app:layout_constraintBottom_toBottomOf="@id/guideline_image_center" />

    <ImageView
        android:id="@+id/start_guide_confirm_center_image"
        android:layout_width="11dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:src="@drawable/start_guide_confirm_image_alert"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_image_center"
        app:layout_constraintBottom_toBottomOf="@id/guideline_image_center" />

    <com.honeycomb.colorphone.view.TypefacedTextView
        android:id="@+id/start_guide_confirm_number"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:lineSpacingExtra="12sp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/start_guide_confirm_image_blue"
        app:layout_constraintCircle="@id/start_guide_confirm_circle_image"
        app:layout_constraintCircleRadius="77dp"
        app:layout_constraintCircleAngle="45"
        tools:text="2"/>

    <com.honeycomb.colorphone.view.TypefacedTextView
        android:id="@+id/start_guide_permission_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="123dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:lineSpacingExtra="12sp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/start_guide_permission_title"
        android:alpha="0.8"
        app:layout_constraintTop_toBottomOf="@id/guideline_image_center"
        app:layout_constraintLeft_toLeftOf="@id/guideline_left"
        app:layout_constraintRight_toRightOf="@id/guideline_right"
        tools:text="2项问题待修复"/>

    <com.honeycomb.colorphone.view.TypefacedTextView
        android:id="@+id/start_guide_permission_bg_pop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="61dp"
        android:layout_marginEnd="61dp"
        android:lineSpacingExtra="12sp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:text="@string/start_guide_permission_bg_pop"
        android:alpha="0.72"
        android:drawableLeft="@drawable/start_guide_confirm_image_bg_pop"
        android:drawablePadding="16dp"
        app:layout_constraintTop_toBottomOf="@id/start_guide_permission_title"
        app:layout_constraintLeft_toLeftOf="@id/guideline_left"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

    <ImageView
        android:id="@+id/start_guide_permission_bg_pop_ok"
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:src="@drawable/start_guide_confirm_alert_image"
        app:layout_constraintTop_toTopOf="@id/start_guide_permission_bg_pop"
        app:layout_constraintBottom_toBottomOf="@id/start_guide_permission_bg_pop"
        app:layout_constraintLeft_toRightOf="@id/start_guide_permission_bg_pop"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/start_guide_permission_bg_pop_loading"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:visibility="gone"
        app:lottie_fileName="lottie/start_guide/permission_loading.json"
        app:lottie_loop="true"
        app:layout_constraintTop_toTopOf="@id/start_guide_permission_bg_pop"
        app:layout_constraintBottom_toBottomOf="@id/start_guide_permission_bg_pop"
        app:layout_constraintLeft_toRightOf="@id/start_guide_permission_bg_pop"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

    <com.honeycomb.colorphone.view.TypefacedTextView
        android:id="@+id/start_guide_permission_auto_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="61dp"
        android:layout_marginEnd="61dp"
        android:lineSpacingExtra="12sp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:text="@string/start_guide_permission_auto_start"
        android:alpha="0.72"
        android:drawableLeft="@drawable/start_guide_confirm_image_screen_flash"
        android:drawablePadding="16dp"
        app:layout_constraintTop_toBottomOf="@id/start_guide_permission_bg_pop"
        app:layout_constraintLeft_toLeftOf="@id/guideline_left"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

    <ImageView
        android:id="@+id/start_guide_permission_auto_start_ok"
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:src="@drawable/start_guide_confirm_alert_image"
        app:layout_constraintTop_toTopOf="@id/start_guide_permission_auto_start"
        app:layout_constraintBottom_toBottomOf="@id/start_guide_permission_auto_start"
        app:layout_constraintLeft_toRightOf="@id/start_guide_permission_auto_start"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

    <com.honeycomb.colorphone.view.TypefacedTextView
        android:id="@+id/start_guide_permission_onlocker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="61dp"
        android:layout_marginEnd="61dp"
        android:lineSpacingExtra="12sp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:text="@string/start_guide_permission_onlocker"
        android:alpha="0.72"
        android:drawableLeft="@drawable/start_guide_confirm_image_onlocker"
        android:drawablePadding="16dp"
        app:layout_constraintTop_toBottomOf="@id/start_guide_permission_auto_start"
        app:layout_constraintLeft_toLeftOf="@id/guideline_left"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

    <ImageView
        android:id="@+id/start_guide_permission_onlocker_ok"
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:src="@drawable/start_guide_confirm_alert_image"
        app:layout_constraintTop_toTopOf="@id/start_guide_permission_onlocker"
        app:layout_constraintBottom_toBottomOf="@id/start_guide_permission_onlocker"
        app:layout_constraintLeft_toRightOf="@id/start_guide_permission_onlocker"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

    <com.honeycomb.colorphone.view.TypefacedTextView
        android:id="@+id/start_guide_permission_call"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="61dp"
        android:layout_marginEnd="61dp"
        android:lineSpacingExtra="12sp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:text="@string/start_guide_permission_call"
        android:alpha="0.72"
        android:drawableLeft="@drawable/start_guide_confirm_image_call"
        android:drawablePadding="16dp"
        app:layout_constraintTop_toBottomOf="@id/start_guide_permission_onlocker"
        app:layout_constraintLeft_toLeftOf="@id/guideline_left"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

    <ImageView
        android:id="@+id/start_guide_permission_call_ok"
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:src="@drawable/start_guide_confirm_alert_image"
        app:layout_constraintTop_toTopOf="@id/start_guide_permission_call"
        app:layout_constraintBottom_toBottomOf="@id/start_guide_permission_call"
        app:layout_constraintLeft_toRightOf="@id/start_guide_permission_call"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

    <Button
        android:id="@+id/start_guide_confirm_fix"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/start_guide_confirm_fix_one_key"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/start_guide_permission_call"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.honeycomb.colorphone.view.TypefacedTextView
        android:id="@+id/start_guide_confirm_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/skip"
        android:textColor="#b8ffffff"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="12dp"
        android:paddingStart="12dp"
        android:paddingRight="12dp"
        android:paddingEnd="12dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>