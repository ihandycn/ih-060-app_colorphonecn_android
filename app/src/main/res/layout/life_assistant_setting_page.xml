<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/life_assistant_head_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout="@layout/life_assistant_head_layout" />

    <RelativeLayout
        android:id="@+id/life_assistant_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:minHeight="54dp"
        android:background="@drawable/material_compat_bg"
        app:layout_constraintTop_toBottomOf="@id/life_assistant_head_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:clickable="true" >

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/life_assistant_setting_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <com.honeycomb.colorphone.view.TypefacedTextView
            android:id="@+id/life_assistant_setting_switch_txt"
            style="@style/NormalText.Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/life_assistant_setting_switch"
            android:layout_toStartOf="@id/life_assistant_setting_switch"
            android:text="@string/settings_activity_notification_reminder" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
