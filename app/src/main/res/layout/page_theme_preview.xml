<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/preview_bg_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <com.acb.call.views.ThemePreviewWindow
        android:id="@+id/card_flash_preview_window"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.acb.call.views.InCallActionView
        android:id="@+id/card_in_call_action_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/theme_apply_layout" />

    <View
        android:id="@+id/dim_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_54_transparent"
        android:visibility="invisible" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/ringtone_image"
            style="@style/NormalButton"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_round_material_compat"
            android:layout_gravity="right|end|center_vertical"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:src="@drawable/ringtone_state_selector" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ringtone_apply_layout"
        android:layout_height="@dimen/ringtone_apply_layout_height"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        tools:background="@color/black_80_transparent">

        <TextView
            android:id="@+id/ringtone_apply_change"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:gravity="center"
            android:text="@string/ringtone_replace_by_music"
            android:textColor="@color/textBlack"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:background="@drawable/white_rounded_corner_bg" />

        <TextView
            android:id="@+id/ringtone_apply_keep"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/ringtone_not_change"
            android:textColor="@color/textBlack"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:background="@drawable/white_rounded_corner_bg" />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/theme_progress_bar"
        style="@style/ProgressBar"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:progress="60"
        app:layout_widthPercent="66%" />

    <LinearLayout
        android:id="@+id/theme_progress_txt_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        android:layout_above="@id/theme_progress_bar"
        android:layout_centerHorizontal="true">

        <com.honeycomb.colorphone.view.TypefacedTextView
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="@string/loading"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textSize="18sp" />
        <com.honeycomb.colorphone.view.TypefacedTextView
            android:id="@+id/theme_progress_txt"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:minWidth="48dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/theme_apply_layout"
        android:layout_height="@dimen/theme_apply_btn_height"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:translationY="@dimen/theme_apply_btn_height"
        tools:translationY="0dp"
        android:orientation="horizontal"
        tools:background="@color/black_80_transparent">
        <TextView
            android:id="@+id/theme_set_for_one"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/selector_color_theme_set"
            android:text="设给ta"
            android:enabled="false" />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/black_80_transparent">
            <View
                android:layout_width="2dp"
                android:layout_gravity="center_vertical"
                android:background="@color/primaryText"
                android:alpha="0.5"
                android:layout_height="20dp"/>
        </FrameLayout>

        <TextView
            android:id="@+id/theme_apply_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/selector_color_theme_setdefault"
            android:text="设为默认"
            />
    </LinearLayout>

    <ViewStub
        android:id="@+id/lock_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout="@layout/stub_theme_lock_in_page"
        />

    <ViewStub
        android:id="@+id/guide_for_random_theme"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout="@layout/stub_theme_set_random"
        />

</android.support.percent.PercentRelativeLayout>