<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/preview_bg_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <com.acb.call.views.ThemePreviewWindow
        android:id="@+id/card_flash_preview_window"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.acb.call.views.InCallActionView
        android:id="@+id/card_in_call_action_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/theme_apply_btn" />

    <View
        android:id="@+id/dim_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55000000"
        android:visibility="invisible" />


    <ProgressBar
        android:id="@+id/theme_progress_bar"
        style="@style/ProgressBar"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:progress="60"
        app:layout_widthPercent="66%" />

    <LinearLayout
        android:id="@+id/theme_progress_txt_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        android:layout_above="@id/theme_progress_bar"
        android:layout_centerHorizontal="true">

        <com.honeycomb.colorphone.view.TypefacedTextView
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="@string/loading"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textSize="18sp" />
        <com.honeycomb.colorphone.view.TypefacedTextView
            android:id="@+id/theme_progress_txt"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:minWidth="48dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>


    <Button
        android:id="@+id/theme_apply_btn"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_bg_yellow"
        android:enabled="false"
        android:translationY="70dp"
        app:layout_widthPercent="66%" />
</android.support.percent.PercentRelativeLayout>