<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/setting_text_gray_1"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/test_number"
            android:hint="输入来电显示号码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来电界面"
            android:onClick="startCallRingingWindow"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好评"
            android:onClick="startRate"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent-App"
            android:onClick="startRecentApp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Float-Window"
            android:onClick="checkFloatWindow"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_anim"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:lottie_fileName="lottie/ringtone_open.json"
            app:lottie_loop="false"
            app:lottie_progress="0"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_anim_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:lottie_fileName="lottie/ringtone_hello.json"
            app:lottie_loop="false"
            app:lottie_progress="0"/>

        <Button
            android:text="铃声界面"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="openRingtone"/>
    </LinearLayout>

</ScrollView>
