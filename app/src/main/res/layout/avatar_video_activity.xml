<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <ImageView
        android:id="@+id/nav_back"
        style="@style/NormalButton"
        android:onClick="onBack"
        android:background="@drawable/bg_round_material_compat"
        android:src="@drawable/back_indicator_white_selector"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <VideoView
        android:id="@+id/avatar_video"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.superapps.view.TypefacedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/avatar_content"
            android:textSize="17sp"
            android:textColor="#e50d0d0d"
            android:gravity="center_horizontal" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:onClick="onInstall"
            android:elevation="@dimen/dialog_elevation"
            android:layout_marginBottom="4dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="#e50d0d0d"
            android:gravity="center"
            android:text="@string/action_install"
            android:background="@drawable/btn_bg_yellow" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
