<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center" >

    <com.superapps.view.TypefacedTextView
        android:id="@+id/tab_layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@color/seletor_color_tab_txt"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="SmallSp"
        tools:text="zixuneeee"/>

    <com.superapps.view.TypefacedTextView
        android:id="@+id/tab_layout_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:paddingStart="2dp"
        android:paddingRight="2dp"
        android:paddingEnd="2dp"
        android:paddingBottom="1dp"
        android:visibility="gone"
        android:textSize="9sp"
        android:textColor="@android:color/white"
        android:background="@drawable/hint_bg_red"
        android:text="10+"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@id/tab_layout_title"
        tools:ignore="SmallSp"
        tools:text="10+"/>

</android.support.constraint.ConstraintLayout>