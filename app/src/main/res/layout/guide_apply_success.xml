<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#a2000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="36dp"
        android:background="@drawable/btn_bg_round_white"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/guide_close"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="end|right"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/material_compat_bg"
            android:scaleType="center"
            android:src="@drawable/acb_phone_alert_call_close" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/guide_apply_success" />

        <com.superapps.view.TypefacedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="@string/apply_success"
            android:textColor="@color/textBlack"
            android:textSize="19sp"
            app:typeface="@string/custom_semibold" />

        <com.superapps.view.TypefacedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/guide_apply_theme_hint"
            android:textColor="@color/textDark"
            android:textSize="14sp"
            app:typeface="@string/custom_regular" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/welcome_guide_function_enable_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_round_material_compat_blue"
            android:gravity="center"
            android:text="@string/acb_guide_ok"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/welcome_guide_enable_checkbox_container"
                android:layout_width="20dp"
                android:layout_height="20dp">

                <CheckBox
                    android:id="@+id/welcome_guide_enable_checkbox"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:alpha="0.6"
                    tools:button="@drawable/welcome_guide_check_box_selector"
                    android:checked="true"
                    android:gravity="center" />

            </FrameLayout>

            <com.superapps.view.TypefacedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:text="@string/guide_enable_all_module"
                android:textColor="@color/primaryText"
                android:alpha="0.6"
                android:textSize="10sp"
                app:typeface="@string/custom_regular" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/welcome_guide_bottom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:clipChildren="false"
            android:gravity="center"
            android:orientation="horizontal">

            <com.superapps.view.TypefacedTextView
                android:id="@+id/welcome_guide_privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/privacy_policy"
                android:textColor="@drawable/privacy_policy_text_color"
                android:textSize="10sp"
                app:typeface="@string/custom_regular" />

            <com.superapps.view.TypefacedTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="2dp"
                android:text=" &amp; "
                android:textColor="@color/subtitle_color"
                android:textSize="10sp"
                app:typeface="@string/custom_regular" />

            <com.superapps.view.TypefacedTextView
                android:id="@+id/welcome_guide_terms_of_service"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/terms_of_service"
                android:textColor="@drawable/privacy_policy_text_color"
                android:textSize="10sp"
                app:typeface="@string/custom_regular" />

        </LinearLayout>


    </LinearLayout>
</FrameLayout>