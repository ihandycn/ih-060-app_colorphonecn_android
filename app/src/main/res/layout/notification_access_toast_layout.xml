<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="18dp"
    android:layout_marginTop="@dimen/notification_toast_margin_top"
    android:layout_marginBottom="@dimen/notification_toast_margin_bottom"
    android:background="@drawable/notificaiton_toast_top"
    android:elevation="6dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/notification_access_lock_icon" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingTop="3dp"
        android:src="@drawable/notification_arrow_right" />

    <com.honeycomb.colorphone.view.TypefacedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@id/imageView1"
        android:layout_toLeftOf="@id/imageView2"
        android:layout_toRightOf="@id/imageView1"
        android:layout_toStartOf="@id/imageView2"
        android:maxLines="2"
        android:text="@string/grant_access_to_optimize_experience"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:typeface="@string/proxima_nova_semibold" />


</RelativeLayout>