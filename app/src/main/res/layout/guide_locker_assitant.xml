<?xml version="1.0" encoding="utf-8"?>

<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/guide_close"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/material_compat_bg"
        android:scaleType="center"
        android:src="@drawable/acb_phone_alert_call_close" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_below="@+id/guide_close"
        android:src="@drawable/locker_assistant_guide"
        style="@style/guide_all_features_image" />


    <com.honeycomb.colorphone.view.TypefacedTextView
        android:id="@+id/tv_title"
        app:layout_widthPercent="86%"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_desc"
        android:layout_centerHorizontal="true"

        android:gravity="center"
        android:text="@string/guide_first_page_title"
        android:textColor="@color/textDark"
        android:textSize="15sp"
        app:typeface="@string/proxima_nova_light" />

    <com.honeycomb.colorphone.view.TypefacedTextView
        app:layout_widthPercent="80%"
        android:id="@+id/tv_desc"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_contains_ads"
        android:layout_centerHorizontal="true"

        android:gravity="center"
        android:text="@string/guide_first_page_desc"
        android:textColor="@color/textDark"
        android:textSize="15sp"
        app:typeface="@string/proxima_nova_light" />

    <com.honeycomb.colorphone.view.TypefacedTextView
        android:id="@+id/tv_contains_ads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/welcome_guide_function_enable_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/guide_txt_margin_vertical"
        android:layout_marginTop="6dp"
        android:text="@string/acb_call_guide_sub_content"
        android:textColor="#999999"
        android:textSize="13sp"
        app:typeface="@string/proxima_nova_light" />

    <Button
        android:id="@+id/welcome_guide_function_enable_btn"
        app:layout_widthPercent="78%"
        android:layout_height="wrap_content"
        android:layout_above="@+id/welcome_guide_bottom_container"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/guide_txt_btn_vertical"
        android:background="@drawable/bg_round_material_compat_blue"
        android:gravity="center"
        android:text="@string/acb_guide_ok"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/welcome_guide_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clipChildren="false"
        android:gravity="center"
        android:orientation="horizontal">

        <com.honeycomb.colorphone.view.TypefacedTextView
            android:id="@+id/welcome_guide_privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/privacy_policy"
            android:textColor="@drawable/privacy_policy_text_color"
            android:textSize="10sp"
            app:typeface="@string/proxima_nova_regular"
            />

        <com.honeycomb.colorphone.view.TypefacedTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="2dp"
            android:text=" &amp; "
            android:textColor="#66000000"
            app:typeface="@string/proxima_nova_regular"
            android:textSize="10sp"
            />

        <com.honeycomb.colorphone.view.TypefacedTextView
            android:id="@+id/welcome_guide_terms_of_service"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:typeface="@string/proxima_nova_regular"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/terms_of_service"
            android:textColor="@drawable/privacy_policy_text_color"
            android:textSize="10sp"
            />

    </LinearLayout>
</android.support.percent.PercentRelativeLayout>