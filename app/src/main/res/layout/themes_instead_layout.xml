<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="248dp"
    android:padding="12dp"
    android:background="@drawable/acb_alert_call_dialog_normal_bg"
    tools:ignore="UnusedAttribute"
    tools:background="#cccccccc">

    <com.superapps.view.TypefacedTextView
        android:id="@+id/theme_instead_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/theme_instead_title"
        android:textColor="#e6000000"
        android:textSize="15sp"
        app:typeface="@string/roboto_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="HardcodedText,SpUsage" />

    <com.superapps.view.TypefacedTextView
        android:id="@+id/theme_instead_action_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:textAllCaps="true"
        android:textColor="#129ff8"
        android:textSize="13sp"
        android:text="@string/more_gif"
        app:typeface="@string/roboto_medium"
        tools:text="More"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/theme_instead_title"
        />

    <com.honeycomb.colorphone.view.RatioCornerImageView
        android:id="@+id/theme_instead_theme1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/theme_instead_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/theme_instead_theme2"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/RatioView.Theme"
        />

    <com.superapps.view.TypefacedTextView
        android:id="@+id/theme_instead_theme_btn1"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:elevation="4dp"
        android:visibility="visible"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:text="@string/apply_btn"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/btn_bg_round_theme_instead"
        app:layout_constraintBottom_toBottomOf="@+id/theme_instead_theme1"
        app:layout_constraintLeft_toLeftOf="@+id/theme_instead_theme1"
        app:layout_constraintRight_toRightOf="@+id/theme_instead_theme1"
        app:typeface="@string/roboto_black"
        />

    <com.acb.call.views.InCallActionView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:layout_marginBottom="6dp"
        android:elevation="2dp"
        app:auto_run="false"
        app:layout_goneMarginBottom="24dp"
        app:layout_constraintTop_toTopOf="@+id/theme_instead_theme1"
        app:layout_constraintLeft_toLeftOf="@+id/theme_instead_theme1"
        app:layout_constraintRight_toRightOf="@+id/theme_instead_theme1"
        app:layout_constraintBottom_toBottomOf="@+id/theme_instead_theme1"
        app:layout_constraintBottom_toTopOf="@+id/theme_instead_theme_btn1" />

    <com.honeycomb.colorphone.view.RatioCornerImageView
        android:id="@+id/theme_instead_theme2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@+id/theme_instead_theme1"
        app:layout_constraintLeft_toRightOf="@+id/theme_instead_theme1"
        app:layout_constraintRight_toLeftOf="@+id/theme_instead_theme3"
        app:layout_constraintBottom_toBottomOf="@+id/theme_instead_theme1"
        style="@style/RatioView.Theme"
        />

    <com.superapps.view.TypefacedTextView
        android:id="@+id/theme_instead_theme_btn2"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:visibility="visible"
        android:elevation="4dp"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:text="@string/apply_btn"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/btn_bg_round_theme_instead"
        app:layout_constraintBottom_toBottomOf="@+id/theme_instead_theme2"
        app:layout_constraintLeft_toLeftOf="@+id/theme_instead_theme2"
        app:layout_constraintRight_toRightOf="@+id/theme_instead_theme2"
        app:typeface="@string/roboto_black"
        />

    <com.acb.call.views.InCallActionView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:layout_marginBottom="6dp"
        android:elevation="2dp"
        app:auto_run="false"
        app:layout_goneMarginBottom="24dp"
        app:layout_constraintTop_toTopOf="@+id/theme_instead_theme2"
        app:layout_constraintLeft_toLeftOf="@+id/theme_instead_theme2"
        app:layout_constraintRight_toRightOf="@+id/theme_instead_theme2"
        app:layout_constraintBottom_toTopOf="@+id/theme_instead_theme_btn2" />

    <com.honeycomb.colorphone.view.RatioCornerImageView
        android:id="@+id/theme_instead_theme3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@+id/theme_instead_theme1"
        app:layout_constraintLeft_toRightOf="@+id/theme_instead_theme2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/theme_instead_theme1"
        style="@style/RatioView.Theme"
        />

    <com.superapps.view.TypefacedTextView
        android:id="@+id/theme_instead_theme_btn3"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:visibility="visible"
        android:elevation="4dp"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:text="@string/apply_btn"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/btn_bg_round_theme_instead"
        app:layout_constraintBottom_toBottomOf="@+id/theme_instead_theme3"
        app:layout_constraintLeft_toLeftOf="@+id/theme_instead_theme3"
        app:layout_constraintRight_toRightOf="@+id/theme_instead_theme3"
        app:typeface="@string/roboto_black"
        />

    <com.acb.call.views.InCallActionView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:layout_marginBottom="6dp"
        android:elevation="2dp"
        app:auto_run="false"
        app:layout_goneMarginBottom="24dp"
        app:layout_constraintTop_toTopOf="@+id/theme_instead_theme3"
        app:layout_constraintLeft_toLeftOf="@+id/theme_instead_theme3"
        app:layout_constraintRight_toRightOf="@+id/theme_instead_theme3"
        app:layout_constraintBottom_toTopOf="@+id/theme_instead_theme_btn3"
        />

</android.support.constraint.ConstraintLayout>
