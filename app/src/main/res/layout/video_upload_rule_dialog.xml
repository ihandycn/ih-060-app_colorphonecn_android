<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_60_transparent"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:id="@+id/bg"
        android:layout_width="288dp"
        android:layout_height="271dp"
        android:clipChildren="false"
        android:layout_centerInParent="true">

        <com.superapps.view.TypefacedTextView
            android:id="@+id/upload_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/upload_rule"
            android:textColor="#6c63ff"
            android:textSize="13.3sp"
            android:layout_marginBottom="22dp"
            app:typeface="@string/custom_font_regular"
            />

        <com.superapps.view.TypefacedTextView
            android:id="@+id/i_know"
            android:layout_width="240dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:textSize="14.7sp"
            android:textColor="#ffffff"
            android:text="@string/i_know"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/upload_rule"
            android:layout_marginBottom="20dp"
            app:typeface="@string/custom_font_medium"
            />

        <com.superapps.view.TypefacedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14.7sp"
            android:textColor="#2a2a2a"
            android:text="@string/rule_description"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/i_know"
            android:layout_marginBottom="20dp"
            app:typeface="@string/custom_font_regular"
            />


    </RelativeLayout>

    <ImageView
        android:id="@+id/upload_rule_image_popup"
        android:layout_width="180.7dp"
        android:layout_height="184.3dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:src="@drawable/upload_rule_image_popup" />
</RelativeLayout>