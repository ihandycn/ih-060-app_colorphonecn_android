<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:background="@color/colorWindowBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/start_guide_function_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="visible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:scaleType="centerCrop"
            android:src="@drawable/start_guide_image" />

        <com.honeycomb.colorphone.view.TypefacedTextView
            app:layout_widthPercent="60%"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="191.5dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5sp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/guide_first_page_title_new"
            tools:text="Please enable the features and permissions: Remind your missed calls"/>

        <Button
            android:id="@+id/start_guide_function_enable_btn"
            app:layout_widthPercent="64.1%"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="92dp"
            android:gravity="center"
            android:text="@string/acb_guide_ok"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="64dp"
            android:gravity="center" >

            <CheckBox
                android:id="@+id/start_guide_check"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="-2dp"
                android:background="@drawable/start_guide_check_image"
                android:button="@null"
                android:checked="true" />

            <com.superapps.view.TypefacedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/start_guide_agree"
                android:text="@string/privacy_policy_agree"
                android:textColor="#4fffffff"
                android:textSize="10sp"
                android:layout_toRightOf="@id/start_guide_check"
                android:layout_toEndOf="@id/start_guide_check"
                app:typeface="@string/custom_font_regular"
                tools:ignore="SmallSp"/>

            <com.superapps.view.TypefacedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/start_guide_policy"
                android:text="@string/privacy_policy"
                android:textColor="@color/start_guide_text_selector"
                android:textSize="10sp"
                android:layout_toRightOf="@id/start_guide_agree"
                android:layout_toEndOf="@id/start_guide_agree"
                app:typeface="@string/custom_font_regular"
                tools:ignore="SmallSp"/>

            <com.superapps.view.TypefacedTextView
                android:id="@+id/start_guide_and"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" &amp; "
                android:textColor="#4cffffff"
                android:textSize="10sp"
                android:layout_toRightOf="@id/start_guide_policy"
                android:layout_toEndOf="@id/start_guide_policy"
                app:typeface="@string/custom_font_regular"
                tools:ignore="SmallSp"/>

            <com.superapps.view.TypefacedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/start_guide_service"
                android:lineSpacingExtra="10sp"
                android:text="@string/terms_of_service"
                android:textColor="@color/start_guide_text_selector"
                android:textSize="10sp"
                android:layout_toRightOf="@id/start_guide_and"
                android:layout_toEndOf="@id/start_guide_and"
                app:typeface="@string/custom_font_regular"
                tools:ignore="SmallSp"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.7dp"
                android:background="#4cffffff"
                android:layout_marginTop="0dp"
                android:layout_below="@id/start_guide_policy"
                android:layout_alignLeft="@id/start_guide_policy"
                android:layout_alignStart="@id/start_guide_policy"
                android:layout_alignRight="@id/start_guide_policy"
                android:layout_alignEnd="@id/start_guide_policy" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.7dp"
                android:background="#4cffffff"
                android:layout_marginTop="0dp"
                android:layout_below="@id/start_guide_service"
                android:layout_alignLeft="@id/start_guide_service"
                android:layout_alignStart="@id/start_guide_service"
                android:layout_alignRight="@id/start_guide_service"
                android:layout_alignEnd="@id/start_guide_service" />

        </RelativeLayout>

    </android.support.percent.PercentRelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/start_guide_permission_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">
        
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/start_guide_permission_anim"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="153dp"
            app:lottie_imageAssetsFolder="lottie/start_guide/start_loading_images"
            app:lottie_fileName="lottie/start_guide/start_loading.json"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <com.honeycomb.colorphone.view.TypefacedTextView
            android:id="@+id/start_guide_permission_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            android:layout_marginRight="56dp"
            android:layout_marginEnd="56dp"
            android:lineSpacingExtra="5sp"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="@string/start_guide_loading_text"
            android:alpha="0.5"
            app:layout_constraintTop_toBottomOf="@id/start_guide_permission_anim"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="Please enable the features and permissions: Remind your missed calls "/>

        <Button
            android:id="@+id/start_guide_permission_fetch_btn"
            android:layout_width="175dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="@string/start_guide_loading_action"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/start_guide_permission_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <include
        android:id="@+id/start_guide_confirm_page"
        layout="@layout/start_guide_confirm"
        android:visibility="gone" />

    <include
        android:id="@+id/start_guide_congratulation_page"
        layout="@layout/start_guide_congratulation"
        android:visibility="gone" />
    
</android.support.constraint.ConstraintLayout>