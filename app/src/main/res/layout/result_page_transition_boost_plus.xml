<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:id="@+id/middle_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/battery_content_margin_bottom"
        android:layout_marginTop="@dimen/battery_content_margin_top"
        android:clipChildren="false"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="220dp"
            android:layout_height="156dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/label_rocket"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:alpha="0"
                android:src="@drawable/boost_plus_result_page_rocket" />

            <ImageView
                android:id="@+id/label_star_left"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_marginTop="60dp"
                android:alpha="0"
                android:src="@drawable/result_page_transition_star" />

            <ImageView
                android:id="@+id/label_star_middle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="right"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:alpha="0"
                android:src="@drawable/result_page_transition_star" />

            <ImageView
                android:id="@+id/label_star_right"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="right"
                android:layout_marginTop="94dp"
                android:alpha="0"
                android:src="@drawable/result_page_transition_star" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false">

            <com.superapps.view.TypefacedTextView
                android:id="@+id/label_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36dp"
                android:alpha="0"
                android:gravity="center"
                android:text="@string/boost_plus_optimal"
                android:textColor="@android:color/white"
                android:textSize="36sp"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/label_title_size_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/size_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="36dp"
                    android:alpha="0"
                    android:orientation="horizontal">

                    <com.superapps.view.TypefacedTextView
                        android:id="@+id/label_title_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="120"
                        android:textColor="@android:color/white"
                        android:textSize="37sp"
                        android:visibility="visible"
                        app:typeface="@string/roboto_regular" />

                    <com.superapps.view.TypefacedTextView
                        android:id="@+id/label_title_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="4dp"
                        android:text="MB"
                        android:textColor="@android:color/white"
                        android:textSize="37sp"
                        android:visibility="visible"
                        app:typeface="@string/roboto_regular" />
                </LinearLayout>

                <com.superapps.view.TypefacedTextView
                    android:id="@+id/label_title_free_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/size_container"
                    android:layout_centerHorizontal="true"
                    android:alpha="0"
                    android:gravity="top|center_horizontal"
                    android:text="@string/boost_plus_free_up"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:visibility="visible"
                    app:typeface="@string/roboto_regular" />
            </RelativeLayout>

        </FrameLayout>
    </LinearLayout>

    <View
        android:id="@+id/transition_toolbar_space_v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        tools:ignore="PrivateResource" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/result_page_header_height"
        android:layout_below="@+id/transition_toolbar_space_v"
        android:layout_marginTop="@dimen/result_page_header_tag_margin"
        android:clipChildren="false"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <com.superapps.view.TypefacedTextView
            android:id="@+id/anchor_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/boost_plus_optimal"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:visibility="invisible"
            app:typeface="@string/roboto_regular" />

    </LinearLayout>

</RelativeLayout>