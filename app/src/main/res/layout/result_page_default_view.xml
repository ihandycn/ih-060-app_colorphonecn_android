<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical"
    tools:background="@color/blue_primary">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/phone_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clipChildren="false"
        app:layout_aspectRatio="54.40%"
        app:layout_heightPercent="40%"
        app:layout_marginBottomPercent="31.49%">

        <ImageView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/result_page_card_optimized_phone" />

        <ImageView
            android:id="@+id/screen"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:src="@drawable/result_page_card_optimized_screen"
            app:layout_aspectRatio="61.07%"
            app:layout_heightPercent="78%" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:clipChildren="true"
            app:layout_aspectRatio="61.07%"
            app:layout_heightPercent="78%">

            <com.honeycomb.colorphone.resultpage.CardOptimizedFlashView
                android:id="@+id/flash_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <ImageView
            android:id="@+id/tick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/result_page_card_optimized_tick_clip"
            app:layout_aspectRatio="100%"
            app:layout_heightPercent="25.16%" />
    </android.support.percent.PercentRelativeLayout>

    <ImageView
        android:id="@+id/shield"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/phone_container"
        android:layout_marginBottom="-12dp"
        android:layout_marginLeft="-37dp"
        android:layout_marginStart="-37dp"
        android:scaleType="fitCenter"
        android:layout_toEndOf="@id/phone_container"
        android:layout_toRightOf="@id/phone_container"
        android:alpha="0"
        android:src="@drawable/result_page_card_optimized_shield_default"
        app:layout_aspectRatio="100%"
        app:layout_heightPercent="11.21%"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/star_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@id/phone_container"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-8dp"
        android:layout_toLeftOf="@id/phone_container"
        android:layout_toStartOf="@id/phone_container"
        android:src="@drawable/result_page_card_optimized_star"
        app:layout_aspectRatio="100%"
        app:layout_widthPercent="6.34%" />

    <ImageView
        android:id="@+id/star_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignEnd="@id/phone_container"
        android:layout_alignRight="@id/phone_container"
        android:layout_alignTop="@id/phone_container"
        android:layout_marginEnd="-20dp"
        android:layout_marginRight="-20dp"
        android:layout_marginTop="-43dp"
        android:src="@drawable/result_page_card_optimized_star"
        app:layout_aspectRatio="100%"
        app:layout_widthPercent="8.34%" />

    <ImageView
        android:id="@+id/star_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignEnd="@id/phone_container"
        android:layout_alignRight="@id/phone_container"
        android:layout_alignTop="@id/phone_container"
        android:layout_marginEnd="-40dp"
        android:layout_marginRight="-40dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/result_page_card_optimized_star"
        app:layout_aspectRatio="100%"
        app:layout_widthPercent="5.06%" />


    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/boost_tip_optimal"
        android:textColor="#d9ffffff"
        android:textSize="@dimen/result_page_card_optimized_font_size"
        app:layout_marginBottomPercent="21.45%" />

    <TextView
        android:id="@+id/btn_ok"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@android:string/ok"
        android:textColor="#4285f4"
        android:textSize="@dimen/result_page_card_optimized_font_size"
        app:layout_aspectRatio="750%"
        app:layout_marginBottomPercent="5.36%"
        app:layout_widthPercent="83.33%" />
</android.support.percent.PercentRelativeLayout>