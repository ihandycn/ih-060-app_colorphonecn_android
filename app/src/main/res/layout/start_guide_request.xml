<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:id="@+id/view_container"
    android:gravity="center_horizontal"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.constraint.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.13" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.87" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_image_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".27"/>

    <View
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_gravity="center"
        android:background="@drawable/start_guide_circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_image_center"
        app:layout_constraintBottom_toBottomOf="@id/guideline_image_center"/>

    <ImageView
        android:id="@+id/start_guide_request_circle_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:src="@drawable/start_guide_confirm_image_purple"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_image_center"
        app:layout_constraintBottom_toBottomOf="@id/guideline_image_center" />

    <com.honeycomb.colorphone.view.TypefacedTextView
        android:id="@+id/start_guide_request_image_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:lineSpacingExtra="18sp"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:text="@string/start_guide_request_image_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline_image_center" />

    <com.honeycomb.colorphone.view.TypefacedTextView
        android:id="@+id/start_guide_request_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="0sp"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="0%"
        tools:text="99%"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/start_guide_request_image_title"/>

    <ImageView
        android:id="@+id/start_guide_request_ball"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:src="@drawable/start_guide_confirm_image_purple"
        app:layout_constraintCircle="@id/start_guide_request_circle_image"
        app:layout_constraintCircleRadius="77dp"
        app:layout_constraintCircleAngle="45"/>

    <com.honeycomb.colorphone.view.TypefacedTextView
        android:id="@+id/start_guide_permission_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="16dp"
        android:alpha="0.8"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="3.2sp"
        android:text="@string/start_guide_request_title"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/guideline_left"
        app:layout_constraintRight_toRightOf="@id/guideline_right"
        app:layout_constraintTop_toBottomOf="@id/guideline_image_center"
        tools:text="@string/start_guide_request_title"/>

    <com.honeycomb.colorphone.view.TypefacedTextView
        android:id="@+id/start_guide_permission_bg_pop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="61dp"
        android:layout_marginEnd="61dp"
        android:lineSpacingExtra="12sp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:text="@string/start_guide_permission_bg_pop"
        android:alpha="0.72"
        android:drawableLeft="@drawable/start_guide_confirm_image_bg_pop"
        android:drawablePadding="16dp"
        app:layout_constraintTop_toBottomOf="@id/start_guide_permission_title"
        app:layout_constraintLeft_toLeftOf="@id/guideline_left"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

    <ImageView
        android:id="@+id/start_guide_permission_bg_pop_ok"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/start_guide_confirm_alert_image"
        app:layout_constraintTop_toTopOf="@id/start_guide_permission_bg_pop"
        app:layout_constraintBottom_toBottomOf="@id/start_guide_permission_bg_pop"
        app:layout_constraintLeft_toRightOf="@id/start_guide_permission_bg_pop"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/start_guide_permission_bg_pop_loading"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:visibility="gone"
        app:lottie_fileName="lottie/start_guide/permission_loading.json"
        app:lottie_loop="true"
        app:layout_constraintTop_toTopOf="@id/start_guide_permission_bg_pop"
        app:layout_constraintBottom_toBottomOf="@id/start_guide_permission_bg_pop"
        app:layout_constraintLeft_toRightOf="@id/start_guide_permission_bg_pop"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

    <com.honeycomb.colorphone.view.TypefacedTextView
        android:id="@+id/start_guide_permission_bg_pop_fix"
        android:layout_width="61dp"
        android:layout_height="29dp"
        android:gravity="center"
        android:text="@string/start_guide_confirm_fix"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/start_guide_permission_bg_pop"
        app:layout_constraintBottom_toBottomOf="@id/start_guide_permission_bg_pop"
        app:layout_constraintLeft_toRightOf="@id/start_guide_permission_bg_pop"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

    <com.honeycomb.colorphone.view.TypefacedTextView
        android:id="@+id/start_guide_permission_auto_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="61dp"
        android:layout_marginEnd="61dp"
        android:lineSpacingExtra="12sp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:text="@string/start_guide_permission_auto_start"
        android:alpha="0.72"
        android:drawableLeft="@drawable/start_guide_confirm_image_screen_flash"
        android:drawablePadding="16dp"
        app:layout_constraintTop_toBottomOf="@id/start_guide_permission_bg_pop"
        app:layout_constraintLeft_toLeftOf="@id/guideline_left"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

    <ImageView
        android:id="@+id/start_guide_permission_auto_start_ok"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/start_guide_confirm_alert_image"
        app:layout_constraintTop_toTopOf="@id/start_guide_permission_auto_start"
        app:layout_constraintBottom_toBottomOf="@id/start_guide_permission_auto_start"
        app:layout_constraintLeft_toRightOf="@id/start_guide_permission_auto_start"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/start_guide_permission_auto_start_loading"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:visibility="gone"
        app:lottie_fileName="lottie/start_guide/permission_loading.json"
        app:lottie_loop="true"
        app:layout_constraintTop_toTopOf="@id/start_guide_permission_auto_start"
        app:layout_constraintBottom_toBottomOf="@id/start_guide_permission_auto_start"
        app:layout_constraintLeft_toRightOf="@id/start_guide_permission_auto_start"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

    <com.honeycomb.colorphone.view.TypefacedTextView
        android:id="@+id/start_guide_permission_auto_start_fix"
        android:layout_width="61dp"
        android:layout_height="29dp"
        android:gravity="center"
        android:text="@string/start_guide_confirm_fix"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/start_guide_permission_auto_start"
        app:layout_constraintBottom_toBottomOf="@id/start_guide_permission_auto_start"
        app:layout_constraintLeft_toRightOf="@id/start_guide_permission_auto_start"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

    <com.honeycomb.colorphone.view.TypefacedTextView
        android:id="@+id/start_guide_permission_onlocker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="61dp"
        android:layout_marginEnd="61dp"
        android:lineSpacingExtra="12sp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:text="@string/start_guide_permission_onlocker"
        android:alpha="0.72"
        android:drawableLeft="@drawable/start_guide_confirm_image_onlocker"
        android:drawablePadding="16dp"
        app:layout_constraintTop_toBottomOf="@id/start_guide_permission_auto_start"
        app:layout_constraintLeft_toLeftOf="@id/guideline_left"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

    <ImageView
        android:id="@+id/start_guide_permission_onlocker_ok"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/start_guide_confirm_alert_image"
        app:layout_constraintTop_toTopOf="@id/start_guide_permission_onlocker"
        app:layout_constraintBottom_toBottomOf="@id/start_guide_permission_onlocker"
        app:layout_constraintLeft_toRightOf="@id/start_guide_permission_onlocker"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/start_guide_permission_onlocker_loading"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:visibility="gone"
        app:lottie_fileName="lottie/start_guide/permission_loading.json"
        app:lottie_loop="true"
        app:layout_constraintTop_toTopOf="@id/start_guide_permission_onlocker"
        app:layout_constraintBottom_toBottomOf="@id/start_guide_permission_onlocker"
        app:layout_constraintLeft_toRightOf="@id/start_guide_permission_onlocker"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

    <com.honeycomb.colorphone.view.TypefacedTextView
        android:id="@+id/start_guide_permission_onlocker_fix"
        android:layout_width="61dp"
        android:layout_height="29dp"
        android:gravity="center"
        android:text="@string/start_guide_confirm_fix"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/start_guide_permission_onlocker"
        app:layout_constraintBottom_toBottomOf="@id/start_guide_permission_onlocker"
        app:layout_constraintLeft_toRightOf="@id/start_guide_permission_onlocker"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

    <com.honeycomb.colorphone.view.TypefacedTextView
        android:id="@+id/start_guide_permission_call"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="61dp"
        android:layout_marginEnd="61dp"
        android:lineSpacingExtra="12sp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:text="@string/start_guide_permission_call"
        android:alpha="0.72"
        android:drawableLeft="@drawable/start_guide_confirm_image_call"
        android:drawablePadding="16dp"
        app:layout_constraintTop_toBottomOf="@id/start_guide_permission_onlocker"
        app:layout_constraintLeft_toLeftOf="@id/guideline_left"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

    <ImageView
        android:id="@+id/start_guide_permission_call_ok"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/start_guide_confirm_alert_image"
        app:layout_constraintTop_toTopOf="@id/start_guide_permission_call"
        app:layout_constraintBottom_toBottomOf="@id/start_guide_permission_call"
        app:layout_constraintLeft_toRightOf="@id/start_guide_permission_call"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/start_guide_permission_call_loading"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:visibility="gone"
        app:lottie_fileName="lottie/start_guide/permission_loading.json"
        app:lottie_loop="true"
        app:layout_constraintTop_toTopOf="@id/start_guide_permission_call"
        app:layout_constraintBottom_toBottomOf="@id/start_guide_permission_call"
        app:layout_constraintLeft_toRightOf="@id/start_guide_permission_call"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

    <com.honeycomb.colorphone.view.TypefacedTextView
        android:id="@+id/start_guide_permission_call_fix"
        android:layout_width="61dp"
        android:layout_height="29dp"
        android:gravity="center"
        android:text="@string/start_guide_confirm_fix"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/start_guide_permission_call"
        app:layout_constraintBottom_toBottomOf="@id/start_guide_permission_call"
        app:layout_constraintLeft_toRightOf="@id/start_guide_permission_call"
        app:layout_constraintRight_toRightOf="@id/guideline_right" />

</android.support.constraint.ConstraintLayout>