                    <com.honeycomb.colorphone.view.TypefacedTextView
                        style="@style/NormalText.Settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/acb_theme_call_assistant" />

                    <com.honeycomb.colorphone.view.TypefacedTextView
                        style="@style/NormalText.SettingsHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/call_assistant_hint"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/setting_item_sms_assistant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/material_compat_bg"
                android:clickable="true"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp">

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/setting_item_sms_assistant_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:clickable="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:layout_toStartOf="@+id/setting_item_sms_assistant_toggle"
                    android:layout_toLeftOf="@+id/setting_item_sms_assistant_toggle"
