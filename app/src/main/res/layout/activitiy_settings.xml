                </LinearLayout>
            </RelativeLayout>
            
            <com.superapps.view.TypefacedTextView
                android:id="@+id/settings_logout_button"
                android:layout_width="177dp"
                android:layout_height="42dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="140dp"
                android:gravity="center"
                android:textSize="15.3sp"
                android:textColor="#ffffff"
                app:typeface="@string/custom_font_regular"
                android:text="@string/logout_title"/>

            <TextView
                android:id="@+id/test_entrance"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/colorAccentDark"
                android:gravity="center"
                android:text="测试"
                android:visibility="gone"
                tools:ignore="HardcodedText"
                tools:visibility="visible" />
        </LinearLayout>

    </ScrollView>

    <include
        android:id="@+id/close_confirm_dialog"
        layout="@layout/layout_life_assistant_close_confirm_dialog"
        android:visibility="gone" />

</RelativeLayout>