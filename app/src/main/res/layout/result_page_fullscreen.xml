<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/result_ad_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        tools:background="@android:color/holo_orange_dark"
        tools:layout_height="10dp"
        tools:layout_width="30dp" />

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/promote_charging_bottom_container"
        android:layout_marginBottom="@dimen/activity_promote_charging_pr_bottom_margin"
        android:layout_marginTop="@dimen/activity_promote_charging_pr_top_margin">

        <FrameLayout
            android:id="@+id/promote_charging_content_top_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:layout_marginTopPercent="15%">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_promote_charging_photo_frame"
                android:paddingBottom="12dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="12dp">

                <com.honeycomb.colorphone.view.FixedRatioLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:aspectRatio="1.9">

                    <ImageView
                        android:id="@+id/result_charging_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <!-- For ads only, set to INVISIBLE when charging screen view is shown -->
                    <!-- Background is added dynamically to handle compatibility issue -->
                    <net.appcloudbox.ads.base.ContainerView.AcbNativeAdPrimaryView
                        android:id="@+id/result_image_container_ad"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                </com.honeycomb.colorphone.view.FixedRatioLayout>

            </FrameLayout>
        </FrameLayout>
    </android.support.percent.PercentRelativeLayout>

    <LinearLayout
        android:id="@+id/promote_charging_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:alpha="0"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/promote_charging_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="@dimen/activity_promote_charging_title_top_margin"
            android:alpha="0.87"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#3e3e3e"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/promote_charging_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:lineSpacingExtra="1dp"
            android:lines="2"
            android:textColor="#929292"
            android:textSize="14sp" />

        <com.colorphone.lock.lockscreen.chargingscreen.view.FlashButton
            android:id="@+id/promote_charging_button"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/material_compat_button_bg_blue"
            android:textColor="#fff"
            android:textSize="18sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/promote_charging_bottom_container"
        android:layout_centerHorizontal="true">

        <FrameLayout
            android:id="@+id/cover_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/promote_screen_icon_half_height"
            android:visibility="gone"
            tools:visibility="visible" />

        <net.appcloudbox.common.UI.ShadowLayout
            android:id="@+id/promote_charging_icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alpha="0"
            app:sl_cornerRadius="60dp"
            app:sl_dx="0dp"
            app:sl_dy="2dp"
            app:sl_shadowColor="#50000000"
            app:sl_shadowRadius="2dp">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_promote_circle_bg" />

            <com.honeycomb.colorphone.view.CircleImageView
                android:id="@+id/result_ad_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_promote_circle_bg"
                android:elevation="2dp" />
        </net.appcloudbox.common.UI.ShadowLayout>
    </FrameLayout>
</RelativeLayout>