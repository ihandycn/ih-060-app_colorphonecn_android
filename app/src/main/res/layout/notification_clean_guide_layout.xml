<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/protect_image"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_centerVertical="true"
        android:src="@drawable/clean_guide_cpu_hot"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/action_btn_bg"
        android:layout_width="82dp"
        android:layout_height="36dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:background="#199cfc" />
    
    <TextView
        android:id="@+id/action_btn"
        android:layout_width="82dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="@string/boost_notification_low_ram_btn"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        tools:ignore="UnusedAttribute" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/protect_image"
        android:layout_toEndOf="@+id/protect_image"
        android:layout_toLeftOf="@+id/action_btn_bg"
        android:layout_toStartOf="@+id/action_btn_bg">

        <TextView
            android:id="@+id/clean_guide_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/boost_notification_low_ram_btn"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:alpha="0.8"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:id="@+id/clean_guide_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clean_guide_description_cpu_hot"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:alpha="0.4"
            tools:ignore="UnusedAttribute" />
    </LinearLayout>

</RelativeLayout>
