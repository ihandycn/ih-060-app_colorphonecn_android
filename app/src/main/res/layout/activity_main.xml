<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" >

        <FrameLayout
            android:id="@+id/layout_guide"
            android:layout_width="55dp"
            android:layout_gravity="end"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_height="40dp" >

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_guide"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|end"
                android:visibility="gone"
                app:lottie_loop="false"
                app:lottie_imageAssetsFolder="lottie/ringtone_guide_images"
                app:lottie_fileName="lottie/ringtone_guide.json"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="55dp"
            android:layout_gravity="end"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_height="40dp" >

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_guide"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|end"
            android:visibility="gone"
            app:lottie_loop="false"
            app:lottie_imageAssetsFolder="lottie/ringtone_guide_images"
            app:lottie_fileName="lottie/ringtone_guide.json"/>
    </FrameLayout>


</android.support.v7.widget.Toolbar>

    <com.honeycomb.colorphone.view.TabFrameLayout
        android:id="@+id/tab_frame_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.honeycomb.colorphone.view.MainTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tablayout_bottom_height"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintRight_toRightOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/tab_cash_center_guide_four"
        android:layout_width="117dp"
        android:layout_height="133dp"
        android:layout_marginBottom="46dp"
        android:visibility="gone"
        app:lottie_fileName="lottie/tab_cash_center_guide.json"
        app:lottie_imageAssetsFolder="lottie/tab_cash_center_guide"
        app:layout_constraintHorizontal_bias="0.687"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/tab_cash_center_guide_five"
        android:layout_width="117dp"
        android:layout_height="133dp"
        android:layout_marginBottom="46dp"
        android:visibility="gone"
        app:lottie_fileName="lottie/tab_cash_center_guide.json"
        app:lottie_imageAssetsFolder="lottie/tab_cash_center_guide"
        app:layout_constraintHorizontal_bias="0.757"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <RelativeLayout
        android:id="@+id/activity_main_overlay_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/overlay_border"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_width="182dp"
            android:layout_height="311dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/set_default_guid_border"
            tools:ignore="RtlHardcoded" />
        <ImageView
            android:id="@+id/overlay_arrow"
            android:layout_width="56dp"
            android:layout_height="86dp"
            android:background="@drawable/set_default_guide_arrow"
            android:layout_toRightOf="@id/overlay_border"
            android:layout_alignTop="@id/overlay_border"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="145dp"
            tools:ignore="RtlHardcoded" />
        <ImageView
            android:layout_width="143dp"
            android:layout_height="36dp"
            android:background="@drawable/set_default_guide_text"
            android:layout_alignLeft="@id/overlay_arrow"
            android:layout_below="@id/overlay_arrow"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="9dp"
            tools:ignore="RtlHardcoded" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
