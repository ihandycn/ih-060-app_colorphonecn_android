<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container_framelayout">

<android.support.constraint.ConstraintLayout
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleMarginStart="20dp" />

    <View
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <include
        layout="@layout/main_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/main_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <include
        layout="@layout/news_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/main_bottom"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <include
        layout="@layout/setting_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/main_bottom"/>

    <com.superapps.view.TypefacedTextView
        android:id="@+id/main_tab_themes"
        style="@style/MainTabItem"
        android:drawableTop="@drawable/main_tab_themes"
        android:text="@string/menu_item_themes"
        app:layout_constraintTop_toTopOf="@+id/main_bottom"
        app:layout_constraintBottom_toBottomOf="@+id/main_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/main_tab_news"
        app:typeface="@string/custom_font_medium"
        tools:ignore="SmallSp"
        tools:text="@string/menu_item_themes"/>

    <com.superapps.view.TypefacedTextView
        android:id="@+id/main_tab_news"
        style="@style/MainTabItem"
        android:drawableTop="@drawable/main_tab_news"
        android:text="@string/menu_item_news"
        app:layout_constraintTop_toTopOf="@+id/main_bottom"
        app:layout_constraintBottom_toBottomOf="@+id/main_bottom"
        app:layout_constraintLeft_toRightOf="@id/main_tab_themes"
        app:layout_constraintRight_toLeftOf="@+id/main_tab_setting"
        app:typeface="@string/custom_font_medium"
        tools:ignore="SmallSp"
        tools:text="@string/menu_item_news"
        />

    <com.superapps.view.TypefacedTextView
        android:id="@+id/main_tab_setting"
        style="@style/MainTabItem"
        android:drawableTop="@drawable/main_tab_settings"
        android:text="@string/settings"
        app:layout_constraintTop_toTopOf="@+id/main_bottom"
        app:layout_constraintBottom_toBottomOf="@+id/main_bottom"
        app:layout_constraintLeft_toRightOf="@id/main_tab_news"
        app:layout_constraintRight_toRightOf="parent"
        app:typeface="@string/custom_font_medium"
        tools:ignore="SmallSp"
        />

</android.support.constraint.ConstraintLayout>


    <ImageButton
        android:id="@+id/toolbar_weather_icon"
        android:layout_marginTop="8dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_round_material_compat"
        android:padding="4dp"
        android:layout_gravity="end|top"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/weather_cloudy" />

</FrameLayout>
