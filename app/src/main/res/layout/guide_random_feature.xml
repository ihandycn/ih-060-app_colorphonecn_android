<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#a2000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="36dp"
        android:background="@drawable/notification_access_white_bg"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/guide_close"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="end|right"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:background="@drawable/material_compat_bg"
            android:scaleType="center"
            android:src="@drawable/acb_phone_alert_call_close" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:src="@drawable/guide_random_theme" />

        <com.superapps.view.TypefacedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textColor="@color/textBlack"
            android:text="@string/random_theme_guide_title"
            android:textSize="22dp"
            app:typeface="@string/custom_font_bold" />

        <com.superapps.view.TypefacedTextView
            android:id="@+id/theme_guide_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:text="@string/random_theme_guide_desc"
            android:textColor="@color/textDark"
            android:textSize="16sp"
            app:typeface="@string/custom_font_semibold" />

        <com.superapps.view.TypefacedTextView
            android:id="@+id/guide_random_ok"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_margin="24dp"
            android:background="@drawable/material_compat_button_bg_blue"
            android:gravity="center"
            android:text="@string/acb_guide_ok"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:typeface="@string/custom_font_bold"/>

    </LinearLayout>
</FrameLayout>