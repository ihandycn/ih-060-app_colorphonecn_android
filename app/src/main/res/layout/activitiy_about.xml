<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/privacy_item"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/material_compat_bg"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="23dp"
                    android:layout_marginStart="23dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.superapps.view.TypefacedTextView
                        style="@style/NormalText.Settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/privacy_policy"
                        />

                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/term_service_item"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/material_compat_bg"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="23dp"
                    android:layout_marginStart="23dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.superapps.view.TypefacedTextView
                        style="@style/NormalText.Settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/terms_of_service"
                        />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/data_usage_cell"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/material_compat_bg"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="23dp"
                    android:layout_marginStart="23dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.superapps.view.TypefacedTextView
                        style="@style/NormalText.Settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gdpr_settings_cell"
                        />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>