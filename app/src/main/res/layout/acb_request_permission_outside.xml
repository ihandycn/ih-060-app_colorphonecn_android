<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/acb_phone_request_permission_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <android.support.constraint.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.081" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.919" />

        <com.honeycomb.colorphone.view.RoundCornerImageView
            android:id="@+id/outside_permission_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/outside_permission_image"
            android:scaleType="centerCrop"
            app:round_left_top_corner_radius="6dp"
            app:round_right_top_corner_radius="6dp" />

        <com.superapps.view.TypefacedTextView
            android:id="@+id/outside_permission_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/acb_outside_permission_title"
            android:textColor="#3c3c3c"
            android:textSize="22sp"
            android:lines="2"
            android:maxLines="2"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/outside_permission_image"
            app:typeface="@string/custom_font_bold" />

        <com.superapps.view.TypefacedTextView
            android:id="@+id/outside_permission_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/acb_outside_permission_description"
            android:textColor="#454545"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/outside_permission_title"
            app:typeface="@string/custom_font_semibold" />

        <com.superapps.view.TypefacedTextView
            android:id="@+id/request_permission_action"
            android:text="@string/acb_request_permission_action"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/outside_permission_description" />

        <com.superapps.view.TypefacedTextView
            android:id="@+id/request_permission_later"
            android:text="@string/acb_outside_permission_later"
            android:textColor="#5b5b5b"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/request_permission_action" />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/content_view">

        <com.superapps.view.TypefacedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/outside_permission_appname"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="19sp"
            android:alpha="0.6"
            app:typeface="@string/custom_font_semibold"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/close_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="5dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/acb_phone_alert_call_close"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
