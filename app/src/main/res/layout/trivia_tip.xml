<?xml version="1.0" encoding="utf-8"?>
<com.honeycomb.colorphone.triviatip.TriviaTipLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    android:clickable="true">

    <!-- Tip -->
    <RelativeLayout
        android:id="@+id/tip_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="32dp"
        android:paddingTop="116dp"
        android:paddingRight="32dp"
        android:paddingBottom="116dp">

        <com.superapps.view.RoundImageView
            android:id="@+id/tip_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:radius="13dp"
            tools:background="@android:color/holo_red_dark" />


        <ImageView
            android:id="@+id/tip_disable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:padding="6dp"
            android:layout_toStartOf="@+id/tip_close_btn"
            android:layout_toLeftOf="@+id/tip_close_btn"
            android:src="@drawable/selector_trivia_tip_more" />

        <ImageView
            android:id="@+id/tip_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="6dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:scaleType="fitXY"
            android:src="@drawable/selector_trivia_tip_close" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/trivia_tip_gradient"
            android:orientation="vertical">

            <com.superapps.view.TypefacedTextView
                android:id="@+id/tip_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="37dp"
                android:layout_marginRight="27dp"
                android:layout_marginBottom="10dp"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:typeface="@string/custom_font_bold" />

            <com.superapps.view.TypefacedTextView
                android:id="@+id/tip_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:layout_marginBottom="32dp"
                android:maxLines="5"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:typeface="@string/custom_font_bold" />

            <com.superapps.view.TypefacedTextView
                android:id="@+id/tip_button"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:typeface="@string/custom_font_black" />

        </LinearLayout>

    </RelativeLayout>

    <!-- Show more -->
    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/content_bg_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <View
            android:id="@+id/content_bg_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <com.superapps.view.TypefacedTextView
            android:id="@+id/content_top_set_as_theme"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center"
            android:alpha="0.8"
            android:shadowRadius="9"
            android:shadowColor="#19000000"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/trivia_shape_set_as_theme"
            android:textColor="#ccffffff"
            android:visibility="gone"
            android:text="@string/trivia_tip_button_set_as_theme"
            tools:visibility="visible"
            app:typeface="@string/custom_font_regular"/>

        <com.superapps.view.TypefacedTextView
            android:id="@+id/content_truly_fact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom_desc"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="17dp"
            android:drawableStart="@drawable/trivia_tip_fact_truly_fact"
            android:drawableLeft="@drawable/trivia_tip_fact_truly_fact"
            android:drawablePadding="12dp"
            android:text="@string/trivia_tip_content_truly_fact"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="gone"
            app:typeface="@string/custom_font_black" />

        <com.superapps.view.TypefacedTextView
            android:id="@+id/bottom_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="28dp"
            android:maxLines="5"
            android:textColor="#e6ffffff"
            android:textSize="20sp"
            android:visibility="gone"
            app:typeface="@string/custom_font_regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/top_des_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="39dp"
                android:layout_marginRight="14dp"
                android:layout_weight="19"
                android:visibility="gone">

                <com.superapps.view.TypefacedTextView
                    android:id="@+id/content_top_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#E6FFFFFF"
                    android:lineSpacingMultiplier="1.3"
                    android:textSize="20sp"
                    app:typeface="@string/custom_font_regular" />

            </ScrollView>

            <LinearLayout
                android:id="@+id/native_ad_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="17dp"
                android:layout_weight="74"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/close_ad_iv"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="right"
                    android:src="@drawable/trivia_tip_native_ad_close" />

                <FrameLayout
                    android:id="@+id/native_ad_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</com.honeycomb.colorphone.triviatip.TriviaTipLayout>