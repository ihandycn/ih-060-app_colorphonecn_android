<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end|right|center_vertical"
    android:orientation="horizontal">

    <com.honeycomb.colorphone.view.TypefacedTextView
        android:id="@+id/call_extra_cash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/cash_tip_bubble"
        android:text="@string/cash_assistant_guide_hint"
        android:textColor="#000000"
        android:textSize="14sp"
        app:typeface="@string/proxima_nova_semibold" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/call_extra_cash_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:lottie_autoPlay="false"
        app:lottie_fileName="lottie/main_wheel.json"
        app:lottie_imageAssetsFolder="lottie/main_wheel/"
        app:lottie_loop="true" />


</LinearLayout>