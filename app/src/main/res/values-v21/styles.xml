<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Dark.CustomOverScroll" parent="@android:style/Theme.DeviceDefault">
        <item name="android:colorEdgeEffect">#c9c9c9</item>
    </style>
    <style name="AppLightStatusBarTheme.Welcome" parent="AppLightStatusBarTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="RatioView.Container">
        <item name="android:layout_marginEnd">@dimen/theme_card_margin_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/theme_card_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/theme_card_margin_horizontal</item>
        <item name="android:layout_marginStart">@dimen/theme_card_margin_horizontal</item>
        <item name="android:clipChildren">false</item>
        <item name="cardCornerRadius">@dimen/theme_card_radius</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardElevation">6dp</item>
        <item name="cardBackgroundColor">@color/transparent</item>
    </style>
</resources>