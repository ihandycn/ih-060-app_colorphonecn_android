<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape >
            <solid android:color="@color/black_54_transparent"/>
            <stroke android:color="@color/white_50_transparent" android:width="2px"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>

    <item>
        <ripple
            android:radius="24dp"
            android:color="@color/material_ripple_white">
            <item
                android:id="@android:id/mask"
                android:drawable="@android:color/white"/>
        </ripple>
    </item>
</layer-list>
