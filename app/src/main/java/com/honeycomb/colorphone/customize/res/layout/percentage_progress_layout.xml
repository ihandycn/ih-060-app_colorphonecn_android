<?xml version="1.0" encoding="utf-8"?>
<com.honeycomb.colorphone.customize.view.PercentageProgressView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/progress_dialog_container"
    android:layout_width="193dp"
    android:layout_height="111dp"
    android:layout_centerInParent="true"
    android:background="@drawable/progress_dialog_bg_darker"
    android:orientation="vertical">

    <com.superapps.view.TypefacedTextView
        android:id="@+id/progress_dialog_percentage_text"
        android:layout_width="45dp"
        android:layout_height="27dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/live_wallpaper_loading_percentage_bg"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        app:typeface="@string/roboto_regular"
        tools:ignore="SpUsage"
        tools:text="42%" />

    <ImageView
        android:id="@+id/progress_dialog_close_btn"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_gravity="end|top"
        android:background="@drawable/bg_circle_material_compat"
        android:padding="9dp"
        android:src="@drawable/dialog_cancel"
        tools:ignore="ContentDescription" />

    <com.honeycomb.colorphone.customize.view.PercentageProgressBar
        android:id="@+id/progress_dialog_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp" />

    <com.superapps.view.TypefacedTextView
        android:id="@+id/progress_dialog_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginEnd="21.3dp"
        android:layout_marginLeft="21.3dp"
        android:layout_marginRight="21.3dp"
        android:layout_marginStart="21.3dp"
        android:gravity="center_horizontal"
        android:paddingBottom="12dp"
        android:textAlignment="center"
        android:textColor="#99ffffff"
        android:textSize="14sp"
        app:typeface="@string/custom_font_regular"
        tools:text="@string/live_wallpaper_loading_text" />
</com.honeycomb.colorphone.customize.view.PercentageProgressView>
