<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        android:background="@drawable/btn_bg_round_white"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/guide_close"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="end|right"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/material_compat_bg"
            android:scaleType="center"
            android:src="@drawable/acb_phone_alert_call_close"
            android:visibility="gone" />

        <com.superapps.view.RatioRoundImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/phone_set_default_guide"
            app:radius_leftTop="24dp"
            app:radius_rightTop="24dp"
            app:super_apps_ratio="1.47" />

        <com.honeycomb.colorphone.view.TypefacedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:text="@string/guide_default_phone_title"
            android:textColor="@color/textBlack"
            android:textSize="22sp"
            app:typeface="@string/proxima_nova_semibold" />

        <com.honeycomb.colorphone.view.TypefacedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/guide_default_phone_content"
            android:textColor="@color/textDark"
            android:textSize="16sp"
            app:typeface="@string/proxima_nova_regular" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/guide_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:gravity="center"
            android:text="@string/guide_default_phone_action"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>
</FrameLayout>