<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryReverse</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorSwitchThumbNormal">@android:color/white</item>
        <item name="android:colorForeground">@android:color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="NormalText.Drawer">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="RatioView.Container">
        <item name="android:layout_marginTop">@dimen/theme_text_margin_bottom_half</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:clipChildren">false</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

</resources>
