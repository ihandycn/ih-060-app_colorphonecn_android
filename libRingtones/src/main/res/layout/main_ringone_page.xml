<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242326"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/classification_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.colorphone.ringtones.view.ResizeTextTabLayout
            android:id="@+id/ringtone_tab"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="@dimen/ringtone_tab_height" />

        <FrameLayout
            android:layout_marginTop="8dp"
            android:id="@+id/ringtone_list_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/search_icon"
        android:layout_width="48dp"
        android:layout_height="@dimen/ringtone_tab_height"
        android:scaleType="centerInside"
        android:layout_alignParentRight="true"
        android:src="@drawable/ringtone_search_icon" />

    <!--    Search layout -->
    <RelativeLayout
        android:id="@+id/search_input_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ringtone_search_bar_height"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:focusable="true"
        android:visibility="gone"
        tools:visibility="visible"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/search_nav_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerInside"
            android:src="@drawable/ringtone_page_back"/>

        <TextView
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/search"
            android:textColor="@color/ringtone_primary_color"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.colorphone.ringtones.view.TextEditTextView
            android:layout_toRightOf="@id/search_nav_back"
            android:id="@+id/search_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/search_button"
            android:background="@drawable/ringtone_search_bg"
            android:drawableLeft="@drawable/ringtone_search_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="@string/ringtone_search_hint"
            android:imeOptions="actionSearch"
            android:lines="1"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:singleLine="true"
            android:textColor="@color/ringtone_text_search"
            android:textColorHint="@color/ringtone_text_hint" />

        <ImageView
            android:id="@+id/search_clear_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/search_button"
            android:scaleType="centerInside"
            android:src="@drawable/ringtone_close"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_input_container">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ringtone_search_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/ringtone_search_no_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/ringtone_search_no_result"
            android:textColor="@color/ringtone_text_hint"
            android:visibility="invisible" />
    </FrameLayout>

    <!--    Ringtone set layout -->
    <ViewStub
        android:id="@+id/stub_ringtone_set_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/frame_set_ringtone"
        />

</RelativeLayout>