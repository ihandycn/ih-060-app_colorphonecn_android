<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:clipChildren="false"
    android:paddingLeft="16dp"
    android:paddingTop="6dp"
    android:paddingRight="16dp"
    android:paddingBottom="6dp"
    tools:background="#000000"
    tools:layout_height="100dp">

    <FrameLayout
        android:id="@+id/cover_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipChildren="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|end"
            android:scaleType="fitCenter"
            android:src="@drawable/ringtone_item_bg_disc"
            android:translationX="8dp" />

        <com.superapps.view.RoundImageView
            android:id="@+id/cover_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:radius="4dp" />

        <ImageView
            android:id="@+id/ringtone_play_status"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/ringtone_control_play"
            android:visibility="gone"
            tools:visibility="visible"/>

        <FrameLayout
            android:id="@+id/ringtone_download_progress"
            android:layout_gravity="center"
            android:layout_width="32dp"
            android:layout_height="32dp">

        </FrameLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cover_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ringtone_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="你的酒馆打样痒痒啦啦啦鬼哦哦噢噢噢噢多多多多" />

        <TextView
            android:id="@+id/ringtone_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ringtone_name"
            android:layout_alignLeft="@id/ringtone_name"
            android:layout_marginTop="12dp"
            android:textColor="#ffc9c6de"
            android:textSize="12sp"
            tools:text="大狗" />

        <TextView
            android:id="@+id/ringtone_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/ringtone_singer"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/ringtone_singer"
            android:drawableLeft="@drawable/ringone_item_play_times"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:textColor="#ffc9c6de"
            android:textSize="12sp"
            tools:text="1990" />

        <LinearLayout
            android:id="@+id/ringtone_action_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ringtone_singer"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/ringtone_action_set"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="设为铃声"
                android:textColor="@color/ringtone_text_black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/ringtone_action_set_ringback"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="设为彩铃"
                android:textColor="@color/ringtone_text_black"
                android:textSize="12dp" />

        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>