<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:gravity="center">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/container_view"
        android:layout_marginTop="8dp"
        android:clipChildren="false"
        app:layout_aspectRatio="150%"
        app:layout_widthPercent="100%">

        <com.superapps.view.RoundImageView
            android:id="@+id/security_protection_card_game_issue_bg"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/black_40_transparent"
            app:radius="8dp"
            app:layout_aspectRatio="150%"
            />

        <TextView
            android:id="@+id/security_protection_game_issue_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="18dp"
            android:minHeight="32dp"
            android:background="@drawable/security_protection_game_issue_play_btn"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            style="@style/Widget.AppCompat.Button"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" />

        <com.superapps.view.AutoResizeTextView
            android:id="@+id/security_protection_card_game_issue_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/security_protection_card_game_issue_subtitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:minLines="1"
            android:text="Spider Solitaire"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:font_style="bold"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            app:typeface="@string/custom_font_bold"
            tools:ignore="HardcodedText" />

        <com.superapps.view.AutoResizeTextView
            android:id="@+id/security_protection_card_game_issue_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/security_protection_game_issue_btn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/security_protection_game_issue_btn"
            android:layout_toStartOf="@+id/security_protection_game_issue_btn"
            android:alpha="0.8"
            android:ellipsize="end"
            android:gravity="top|center_vertical"
            android:maxLines="2"
            android:minLines="2"
            android:orientation="horizontal"
            android:text="Objective of the game is to move all cards onto the four foundation dwdwddwdwdwddwdw"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            app:typeface="@string/roboto_regular"
            tools:ignore="HardcodedText" />

    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>