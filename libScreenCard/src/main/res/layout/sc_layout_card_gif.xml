<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <colorphone.acb.com.libscreencard.TextureVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:videoScaleType="fit_center" />

    <com.superapps.view.TypefacedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/gif_center_funny_icon"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/gif_center_funny_icon"
        android:text="@string/funny_gif"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:typeface="@string/roboto_black" />

    <com.superapps.view.TypefacedTextView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/more_gif"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:typeface="@string/roboto_medium" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|end"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/icon_noad"/>
</FrameLayout>